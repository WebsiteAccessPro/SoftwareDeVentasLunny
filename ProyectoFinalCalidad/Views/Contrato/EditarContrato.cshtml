@model ProyectoFinalCalidad.Models.Contrato

@{
    ViewData["Title"] = "Editar Contrato";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    :root {
        --primary: #009ffd;
        --accent: #6a4c93;
        --text-dark: #1e2a35;
        --text-light: #6b7280;
        --border: #d0d7de;
        --bg-light: #f9fafb;
        --success: #00c16e;
        --warning: #ffb020;
    }

    /* ===== MODO NOCHE PARA SUMMARY ===== */
    html[data-theme="dark"] .summary,
    [data-bs-theme="dark"] .summary,
    .dark-mode .summary {
        background-color: transparent;
        color: #e0e0e0;
    }

        html[data-theme="dark"] .summary .card,
        [data-bs-theme="dark"] .summary .card,
        .dark-mode .summary .card {
            background-color: #2a2a2a;
            border: 1px solid #444;
            color: #f1f1f1;
        }

        html[data-theme="dark"] .summary .label,
        [data-bs-theme="dark"] .summary .label,
        .dark-mode .summary .label {
            color: #b0b0b0;
        }

        html[data-theme="dark"] .summary .value,
        [data-bs-theme="dark"] .summary .value,
        .dark-mode .summary .value {
            color: #fff;
        }

        /* BADGES */
        html[data-theme="dark"] .summary .badge-success,
        [data-bs-theme="dark"] .summary .badge-success,
        .dark-mode .summary .badge-success {
            background-color: rgba(0, 193, 110, 0.2);
            color: #00c16e;
            border: 1px solid rgba(0, 193, 110, 0.4);
        }

        html[data-theme="dark"] .summary .badge-warning,
        [data-bs-theme="dark"] .summary .badge-warning,
        .dark-mode .summary .badge-warning {
            background-color: rgba(255, 176, 32, 0.2);
            color: #ffb020;
            border: 1px solid rgba(255, 176, 32, 0.4);
        }

        html[data-theme="dark"] .summary .badge-danger,
        [data-bs-theme="dark"] .summary .badge-danger,
        .dark-mode .summary .badge-danger {
            background-color: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.4);
        }


    .form-container {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 28px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 900px;
        margin: 60px auto;
        overflow: hidden;
        animation: fadeIn 0.5s ease-in-out;
    }

    .form-header {
        background: linear-gradient(90deg, var(--primary), var(--accent));
        color: #fff;
        padding: 18px 28px;
        font-size: 1.4rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        letter-spacing: 0.3px;
    }

        .form-header i {
            font-size: 1.5rem;
        }

    .form-body {
        padding: 32px 40px 28px 40px;
        background: #fff;
    }

    .summary {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
        margin-bottom: 18px;
    }

        .summary .card {
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 12px 16px;
            background: #fff;
        }

        .summary .label {
            color: var(--text-light);
            font-size: 0.85rem;
        }

        .summary .value {
            color: var(--text-dark);
            font-weight: 600;
        }

        .badge {
            display: inline-block;
            padding: 6px 10px;
            border-radius: 999px;
            font-size: 0.82rem;
            font-weight: 600;
        }

        .badge-success { background: rgba(0, 193, 110, 0.12); color: var(--success); border: 1px solid rgba(0, 193, 110, 0.35); }
        .badge-warning { background: rgba(255, 176, 32, 0.12); color: #b57400; border: 1px solid rgba(255, 176, 32, 0.35); }
        .badge-danger { background: rgba(239, 68, 68, 0.12); color: #b91c1c; border: 1px solid rgba(239, 68, 68, 0.35); }

    .form-group { margin-bottom: 20px; }
    .form-label { font-weight: 600; color: var(--text-dark); margin-bottom: 6px; font-size: 0.95rem; }
    .form-control {
        width: 100%; padding: 10px 14px; border: 1px solid var(--border); border-radius: 10px; background: #fff; transition: all 0.25s ease; font-size: 0.9rem;
    }
    .form-control:focus { border-color: var(--primary); box-shadow: 0 0 0 3px rgba(0, 159, 253, 0.15); outline: none; }
    .text-danger.small { font-size: 0.8rem; font-weight: 500; }

    .actions {
        display: flex; gap: 12px; margin-top: 18px;
    }
    .btn-save {
        background: linear-gradient(90deg, var(--success), var(--primary));
        color: #fff; font-weight: 600; border: none; border-radius: 10px; padding: 12px 20px; font-size: 1rem;
        display: inline-flex; align-items: center; justify-content: center; gap: 8px; transition: all 0.3s ease;
        box-shadow: 0 6px 16px rgba(0, 159, 253, 0.2);
    }
    .btn-save:hover { transform: translateY(-2px); box-shadow: 0 10px 24px rgba(0, 159, 253, 0.25); filter: brightness(1.05); }
    .btn-secondary {
        background: #eef2f7; color: var(--text-dark); border: 1px solid var(--border); border-radius: 10px; padding: 12px 18px; font-weight: 600;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="form-container">
    <div class="form-header">
        <i class="fas fa-file-pen"></i> @ViewData["Title"]
    </div>

    <div class="form-body">
        <div class="summary">
            <div class="card">
                <div class="label">N° Contrato</div>
                <div class="value">@Model.Id</div>
            </div>
            <div class="card">
                <div class="label">Cliente</div>
                <div class="value">@Model.Cliente?.Nombres</div>
            </div>
            <div class="card">
                <div class="label">Estado</div>
                <div>
                    @if ((Model.Estado ?? "").ToLower() == "activo")
                    {
                        <span class="badge badge-success">Activo</span>
                    }
                    else if ((Model.Estado ?? "").ToLower() == "inactivo")
                    {
                        <span class="badge badge-danger">Inactivo</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">@Model.Estado</span>
                    }
                </div>
            </div>
        </div>

        <form asp-action="EditarContrato" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="ClienteId" class="form-label"><i class="fas fa-user-tag me-1"></i>Cliente</label>
                <select asp-for="ClienteId" asp-items="ViewBag.Clientes" class="form-control">
                    <option value="">-- Selecciona Cliente --</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlanId" class="form-label"><i class="fas fa-layer-group me-1"></i>Plan</label>
                <select asp-for="PlanId" asp-items="ViewBag.Planes" class="form-control">
                    <option value="">-- Selecciona Plan --</option>
                </select>
                <span asp-validation-for="PlanId" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmpleadoId" class="form-label"><i class="fas fa-user-tie me-1"></i>Empleado Asignado</label>
                <select asp-for="EmpleadoId" asp-items="ViewBag.Empleados" class="form-control">
                    <option value="">-- Selecciona Empleado --</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="FechaInicio" class="form-label"><i class="fas fa-calendar-alt me-1"></i>Fecha de Inicio</label>
                    <input asp-for="FechaInicio" type="date" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label for="mesesDuracion" class="form-label"><i class="fas fa-clock me-1"></i>Duración (meses)</label>
                    <input type="number" name="mesesDuracion" min="1" class="form-control" value="@ViewBag.MesesDuracion" />
                </div>
            </div>

            <div class="actions">
                <button type="submit" class="btn-save">
                    <i class="fas fa-floppy-disk"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>