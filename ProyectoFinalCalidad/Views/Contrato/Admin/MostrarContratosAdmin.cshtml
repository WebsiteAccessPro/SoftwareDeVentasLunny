@model IEnumerable<ProyectoFinalCalidad.Models.Contrato>

@{
    ViewData["Title"] = "Administración de Contratos";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* === CONTENEDOR PRINCIPAL === */
    .main-container {
        width: 100%;
        max-width: 1600px;
        margin: 30px auto;
        padding: 0 10px;
    }

    /* ===== MODO OSCURO: Botón Limpiar en rojo oscuro ===== */
    html[data-theme="dark"] #btnLimpiar.btn-danger.btn-filter,
    [data-bs-theme="dark"] #btnLimpiar.btn-danger.btn-filter,
    .dark-mode #btnLimpiar.btn-danger.btn-filter {
        background-color: #8B0000; /* rojo oscuro */
        border-color: #8B0000;
        color: #f5f7fa;
    }

        html[data-theme="dark"] #btnLimpiar.btn-danger.btn-filter:hover,
        [data-bs-theme="dark"] #btnLimpiar.btn-danger.btn-filter:hover,
        .dark-mode #btnLimpiar.btn-danger.btn-filter:hover {
            background-color: #a40000;
            border-color: #a40000;
        }

    html[data-theme="dark"] .btn-add,
    [data-bs-theme="dark"] .btn-add,
    .dark-mode .btn-add {
        background-color: #0b3d2e;
        border-color: #0b3d2e;
        color: #f5f7fa;
    }

        html[data-theme="dark"] .btn-add:hover,
        [data-bs-theme="dark"] .btn-add:hover,
        .dark-mode .btn-add:hover {
            background-color: #06261a;
            border-color: #06261a;
        }

    /* === CARD PRINCIPAL === */
    .container-card {
        background: linear-gradient(145deg, #ffffff, #f9fbff);
        border-radius: 1.2rem;
        box-shadow: 0 10px 35px rgba(15, 32, 39, 0.12);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: relative;
        animation: fadeUp 0.7s ease forwards;
    }

        .container-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            height: 6px;
            width: 100%;
            background: linear-gradient(90deg, #009ffd, #6a4c93);
            border-radius: 1.2rem 1.2rem 0 0;
        }

    .container-card-title {
        font-size: 1.7rem;
        font-weight: 700;
        color: #203A43;
        margin-bottom: 1rem;
        border-bottom: 3px solid #009ffd;
        padding-bottom: 8px;
    }

    /* ===== BOTONES DE HABILITAR / DESHABILITAR ===== */
    .btn-outline-danger,
    .btn-outline-success {
        position: relative;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 6px 14px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.25s ease;
        overflow: hidden;
        z-index: 0;
    }

    /* === Deshabilitar === */
    .btn-outline-danger {
        color: #e74c3c;
        border: 1.8px solid #e74c3c;
        background: #fff;
    }

        .btn-outline-danger:hover {
            background: #e74c3c;
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.25);
        }

    /* === Habilitar === */
    .btn-outline-success {
        color: #27ae60;
        border: 1.8px solid #27ae60;
        background: #fff;
    }

        .btn-outline-success:hover {
            background: #27ae60;
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(46, 204, 113, 0.25);
        }

        /* Efecto de onda sutil al hacer clic */
        .btn-outline-danger::after,
        .btn-outline-success::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(255, 255, 255, 0.25);
            transform: scale(0);
            opacity: 0;
            border-radius: inherit;
            transition: transform 0.4s ease, opacity 0.4s ease;
            z-index: -1;
        }

        .btn-outline-danger:active::after,
        .btn-outline-success:active::after {
            transform: scale(2);
            opacity: 1;
        }

        /* iconos con animacion */
        .btn-outline-danger i,
        .btn-outline-success i {
            transition: transform 0.25s ease;
        }

    .btn-outline-danger:hover i {
        transform: rotate(-10deg) scale(1.1);
    }

    .btn-outline-success:hover i {
        transform: rotate(10deg) scale(1.1);
    }

    /* === Botón icono Editar === */
    .btn-icon {
        color: #009ffd;
        border: 1.8px solid #009ffd;
        background: #fff;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 6px 10px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.25s ease;
    }
    .btn-icon:hover {
        background: #009ffd;
        color: #fff;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(0, 159, 253, 0.25);
    }
    .btn-icon i { transition: transform 0.25s ease; }
    .btn-icon:hover i { transform: rotate(8deg) scale(1.08); }

    /* Variante de icono peligro (eliminar) */
    .btn-icon-danger {
        color: #e74c3c;
        border-color: #e74c3c;
    }
    .btn-icon-danger:hover {
        background: #e74c3c;
        color: #fff;
        box-shadow: 0 4px 12px rgba(231, 76, 60, 0.25);
    }

    .content-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 6px 25px rgba(15, 32, 39, 0.1);
        padding: 1.8rem;
        transition: all 0.3s ease-in-out;
    }

        .content-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(15, 32, 39, 0.15);
        }

    /* === FILTROS === */
    .filter-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.8rem;
        padding: 0.8rem 0;
    }

    .filter-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 10px;
    }

    .input-group {
        display: flex;
        width: 100%;
        margin-bottom: 0.6rem;
    }

    .input-group-text {
        background-color: #f1f1f1;
        border: 1px solid #ccc;
        padding: 0.4rem 0.6rem;
        font-weight: 500;
        color: #203A43;
        border-radius: 0.5rem 0 0 0.5rem;
        font-size: 0.85rem;
    }

    .input-group .form-control {
        border-radius: 0 0.5rem 0.5rem 0;
        border: 1px solid #ccc;
        padding: 0.45rem 0.65rem;
        font-size: 0.85rem;
    }

        .input-group .form-control:focus {
            border-color: #009ffd;
            box-shadow: 0 0 0 0.2rem rgba(0, 159, 253, 0.25);
        }

    /* ===== BOTONES ===== */
    .btn-add, .btn-primary, .btn-secondary, .btn-danger, .btn-info, .btn-filter {
        font-size: 0.95rem;
        padding: 8px 18px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
    }

    .btn-add {
        background-color: #3A7CA5;
        color: #fff;
        border: none;
    }

        .btn-add:hover {
            background-color: #2c5d7d;
            transform: translateY(-1px);
        }

    .btn-info {
        background-color: #f39c12;
        color: #fff;
        border: none;
    }

        .btn-info:hover {
            background-color: #d68910;
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: #e74c3c;
        color: #fff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: translateY(-1px);
        }

    /* === TABLA === */
    .table-container {
        border-radius: 1rem;
        overflow-x: auto;
        background: #fff;
        box-shadow: 0 5px 18px rgba(0,0,0,0.05);
    }

    table.custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.88rem;
    }

        table.custom-table thead {
            background: linear-gradient(90deg,#009ffd,#6a4c93);
            color: white;
        }

        table.custom-table th, table.custom-table td {
            padding: 10px 14px;
            text-align: center;
            vertical-align: middle;
        }

        table.custom-table tbody tr:hover {
            background: #f8faff;
        }

    .badge {
        padding: 0.4em 0.7em;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 0.5rem;
    }

    .badge-activo {
        background-color: rgba(46, 204, 113, 0.15);
        color: #27ae60;
    }

    .badge-inactivo {
        background-color: rgba(231, 76, 60, 0.15);
        color: #e74c3c;
    }

    .btn-add {
        background-color: #3A7CA5;
        color: #fff;
        border: none;
        padding: 8px 18px;
        border-radius: 10px;
    }

        .btn-add:hover {
            background-color: #2c5d7d;
            transform: translateY(-1px);
        }

    /* ===== PAGINACION ===== */
    .pagination {
        display: flex;
        gap: 0.3rem;
        margin-bottom: 0;
    }

        .pagination .page-item .page-link {
            color: #2563eb;
            border: 1px solid #d1d5db;
            background: #fff;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.35rem 0.75rem;
            transition: all 0.25s ease;
        }

            .pagination .page-item .page-link:hover {
                background-color: #eff6ff;
                border-color: #93c5fd;
                color: #1d4ed8;
                transform: translateY(-1px);
            }

        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, #2563eb, #3b82f6);
            color: #fff;
            border-color: #2563eb;
            box-shadow: 0 2px 8px rgba(37,99,235,0.25);
            transform: scale(1.05);
        }
</style>

<div class="main-container">
    <div class="container-card">
        <div class="container-card-title">Administración de Contratos</div>

        <!-- === FILTROS === -->
        <div class="content-card">
            <h5 class="mb-3 fw-semibold">Filtros de Contratos</h5>
            <div class="filter-grid">
                <div class="input-group">
                    <span class="input-group-text">CLIENTE</span>
                    <input type="text" id="filtroCliente" class="form-control" placeholder="Nombre del cliente">
                </div>
                <div class="input-group">
                    <span class="input-group-text">PLAN</span>
                    <input type="text" id="filtroPlan" class="form-control" placeholder="Nombre del plan">
                </div>
                <div class="input-group">
                    <span class="input-group-text">EMPLEADO</span>
                    <input type="text" id="filtroEmpleado" class="form-control" placeholder="Responsable del contrato">
                </div>
                <div class="input-group">
                    <span class="input-group-text">ESTADO</span>
                    <select id="filtroEstado" class="form-control">
                        <option value="">Seleccionar</option>
                        <option value="activo">Activo</option>
                        <option value="inactivo">Inactivo</option>
                    </select>
                </div>
                <div class="input-group">
                    <span class="input-group-text">FECHA INICIO</span>
                    <input type="date" id="filtroFechaInicio" class="form-control">
                </div>
                <div class="input-group">
                    <span class="input-group-text">FECHA FIN</span>
                    <input type="date" id="filtroFechaFin" class="form-control">
                </div>
            </div>

            <div class="filter-actions">
                <button id="btnConsultar" class="btn btn-info"><i class="fas fa-search"></i> Consultar</button>
                <button id="btnLimpiar" class="btn btn-danger"><i class="fas fa-broom"></i> Limpiar</button>
            </div>
        </div>

        <!-- === TABLA CONTRATOS === -->
        <div class="content-card">
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                <div class="d-flex align-items-center gap-2">
                    <label for="rowsPerPage" class="fw-semibold mb-0">Mostrar:</label>
                    <select id="rowsPerPage" class="form-select form-select-sm w-auto">
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <a asp-action="AgregarContrato" class="btn btn-add">
                    <i class="fas fa-plus-circle"></i> Nuevo Contrato
                </a>
            </div>

            <div class="table-container">
                <table id="tablaContratos" class="custom-table">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Plan</th>
                            <th>Empleado</th>
                            <th>Inicio</th>
                            <th>Fin</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Cliente?.Nombres</td>
                                <td>@c.PlanServicio?.NombrePlan</td>
                                <td>@c.Empleado?.nombres</td>
                                <td>@c.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>@c.FechaFin.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge @(c.Estado == "activo" ? "badge-activo" : "badge-inactivo")">@c.Estado</span>
                                </td>
                                <td>
                                    @if (c.Estado == "activo")
                                    {
                                        <a href="#" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#InhabilitarContratoModal"
                                           data-id="@c.Id" data-nombre="@c.Cliente?.Nombres" title="Deshabilitar contrato">
                                            <i class="fas fa-ban"></i>
                                        </a>

                                        <a asp-action="EditarContrato" asp-controller="Contrato" asp-route-id="@c.Id" class="btn btn-icon btn-sm ms-1" title="Editar contrato">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <a href="#" class="btn btn-icon btn-icon-danger btn-sm ms-1" title="Eliminar contrato" data-bs-toggle="modal" data-bs-target="#EliminarContratoModal" data-id="@c.Id" data-nombre="@c.Cliente?.Nombres">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <form asp-action="Habilitar" asp-controller="Contrato" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button class="btn btn-outline-success btn-sm"><i class="fas fa-check"></i> </button>
                                        </form>

                                        <a asp-action="EditarContrato" asp-controller="Contrato" asp-route-id="@c.Id" class="btn btn-icon btn-sm ms-1" title="Editar contrato">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <a href="#" class="btn btn-icon btn-icon-danger btn-sm ms-1" title="Eliminar contrato" data-bs-toggle="modal" data-bs-target="#EliminarContratoModal" data-id="@c.Id" data-nombre="@c.Cliente?.Nombres">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2">
                <div id="tableInfo" class="text-muted">Mostrando registros del 1 al 10</div>
                <nav>
                    <ul class="pagination pagination-sm mb-0" id="pagination">
                        <li class="page-item"><button id="prevPage" class="page-link">Anterior</button></li>
                        <li class="page-item"><button id="nextPage" class="page-link">Siguiente</button></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="InhabilitarContratoModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Deshabilitación</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p>¿Deseas deshabilitar el contrato del cliente <strong id="contratoNombre"></strong>?</p>
            </div>
            <div class="modal-footer justify-content-center">
                <form id="inhabilitarContratoForm" asp-action="Deshabilitar" asp-controller="Contrato" method="post">
                    <input type="hidden" name="id" id="contratoId" />
                    <button type="submit" class="btn btn-danger px-4">Deshabilitar</button>
                </form>
                <button class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL ELIMINAR -->
<div class="modal fade" id="EliminarContratoModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">¿Deseas eliminar el contrato del cliente <strong id="eliminarContratoNombre"></strong>?</p>
                <p class="text-muted text-center">Esta acción es permanente y no se puede deshacer.</p>
                <div id="eliminarWarning" class="alert alert-warning d-none mt-3" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span id="eliminarWarningText">Este contrato tiene pagos asociados y no puede ser eliminado.</span>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <form id="eliminarContratoForm" asp-action="Eliminar" asp-controller="Contrato" method="post" class="d-inline">
                    <input type="hidden" name="id" id="eliminarContratoId" />
                    <button type="submit" class="btn btn-danger px-4" id="btnEliminarSubmit"><i class="fas fa-trash"></i> Eliminar</button>
                </form>
                <button type="button" class="btn btn-warning px-4 d-none" id="btnEliminarAceptar" data-bs-dismiss="modal">Aceptar</button>
                <button class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
    </div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const filtroCliente = document.getElementById("filtroCliente");
            const filtroPlan = document.getElementById("filtroPlan");
            const filtroEmpleado = document.getElementById("filtroEmpleado");
            const filtroEstado = document.getElementById("filtroEstado");
            const filtroFechaInicio = document.getElementById("filtroFechaInicio");
            const filtroFechaFin = document.getElementById("filtroFechaFin");
            const filas = document.querySelectorAll("#tablaContratos tbody tr");
            const norm = s => (s || "").toLowerCase().trim();

            document.getElementById("btnConsultar").onclick = () => {
                const c = norm(filtroCliente.value),
                      p = norm(filtroPlan.value),
                      e = norm(filtroEmpleado.value),
                      es = norm(filtroEstado.value),
                      fi = filtroFechaInicio.value ? new Date(filtroFechaInicio.value) : null,
                      ff = filtroFechaFin.value ? new Date(filtroFechaFin.value) : null;

                filas.forEach(f => {
                    const td = f.querySelectorAll("td");
                    const vCliente = norm(td[0]?.textContent);
                    const vPlan = norm(td[1]?.textContent);
                    const vEmpleado = norm(td[2]?.textContent);
                    const vInicio = td[3]?.textContent.trim();
                    const vFin = td[4]?.textContent.trim();
                    const vEstado = norm(td[5]?.textContent);
                    const dInicio = vInicio ? new Date(vInicio.split("/").reverse().join("-")) : null;
                    const dFin = vFin ? new Date(vFin.split("/").reverse().join("-")) : null;

                    let visible = true;
                    if (c && !vCliente.includes(c)) visible = false;
                    if (p && !vPlan.includes(p)) visible = false;
                    if (e && !vEmpleado.includes(e)) visible = false;
                    if (es && vEstado !== es) visible = false;
                    if (fi && dInicio && dInicio < fi) visible = false;
                    if (ff && dFin && dFin > ff) visible = false;

                    f.style.display = visible ? "" : "none";
                });
            };

            document.getElementById("btnLimpiar").onclick = () => {
                [filtroCliente,filtroPlan,filtroEmpleado,filtroEstado,filtroFechaInicio,filtroFechaFin].forEach(i=>i.value="");
                filas.forEach(f=>f.style.display="");
            };

            const modal = document.getElementById("InhabilitarContratoModal");
            modal.addEventListener("show.bs.modal", e=>{
                const btn = e.relatedTarget;
                document.getElementById("contratoId").value = btn.dataset.id;
                document.getElementById("contratoNombre").textContent = btn.dataset.nombre;
            });

            const eliminarModal = document.getElementById("EliminarContratoModal");
            eliminarModal.addEventListener("show.bs.modal", async e => {
                const btn = e.relatedTarget;
                const id = btn.dataset.id;
                const nombre = btn.dataset.nombre;
                const warning = document.getElementById("eliminarWarning");
                const warningText = document.getElementById("eliminarWarningText");
                const btnSubmit = document.getElementById("btnEliminarSubmit");
                const btnAceptar = document.getElementById("btnEliminarAceptar");

                document.getElementById("eliminarContratoId").value = id;
                document.getElementById("eliminarContratoNombre").textContent = nombre;

                try {
                    const url = '@Url.Action("TienePagos", "Contrato")' + `?id=${id}`;
                    const resp = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                    const data = await resp.json();
                    if (data && data.hasPayments) {
                        warning.classList.remove('d-none');
                        warningText.textContent = `Este contrato tiene ${data.count} pago(s) asociado(s) y no puede ser eliminado.`;
                        btnSubmit.classList.add('d-none');
                        btnAceptar.classList.remove('d-none');
                    } else {
                        warning.classList.add('d-none');
                        btnSubmit.classList.remove('d-none');
                        btnAceptar.classList.add('d-none');
                    }
                } catch (err) {
                    // En caso de error, por seguridad no eliminar
                    warning.classList.remove('d-none');
                    warningText.textContent = 'No se pudo verificar pagos asociados. Por favor, intente nuevamente.';
                    btnSubmit.classList.add('d-none');
                    btnAceptar.classList.remove('d-none');
                }
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tabla = document.getElementById("tablaContratos");
            const filas = Array.from(tabla.querySelectorAll("tbody tr"));
            const info = document.getElementById("tableInfo");
            const prevBtn = document.getElementById("prevPage");
            const nextBtn = document.getElementById("nextPage");
            const pagination = document.getElementById("pagination");
            const selectFilas = document.getElementById("rowsPerPage");

            let paginaActual = 1;
            let filasPorPagina = parseInt(selectFilas.value);
            const totalFilas = filas.length;
            let totalPaginas = Math.ceil(totalFilas / filasPorPagina);

            function renderPaginacion() {
                // limpiar numeracion anterior
                pagination.querySelectorAll(".page-number, .dots").forEach(el => el.remove());
                totalPaginas = Math.ceil(totalFilas / filasPorPagina);

                const next = document.getElementById("nextPage").parentElement;
                const maxPaginasVisibles = 5;
                let paginas = [];

                // generar lista de paginas visible
                if (totalPaginas <= maxPaginasVisibles + 2) {
                    for (let i = 1; i <= totalPaginas; i++) paginas.push(i);
                } else {
                    let start = Math.max(2, paginaActual - 2);
                    let end = Math.min(totalPaginas - 1, paginaActual + 2);

                    if (paginaActual <= 3) {
                        start = 2;
                        end = 5;
                    } else if (paginaActual >= totalPaginas - 2) {
                        start = totalPaginas - 4;
                        end = totalPaginas - 1;
                    }

                    paginas = [1, ...Array.from({ length: end - start + 1 }, (_, i) => start + i), totalPaginas];
                }

                // crear botones numerados
                for (let i = 0; i < paginas.length; i++) {
                    if (i > 0 && paginas[i] - paginas[i - 1] > 1) {
                        const dots = document.createElement("li");
                        dots.className = "page-item disabled dots";
                        dots.innerHTML = `<span class="page-link">...</span>`;
                        pagination.insertBefore(dots, next);
                    }

                    const li = document.createElement("li");
                    li.className = `page-item page-number ${paginas[i] === paginaActual ? "active" : ""}`;
                    const btn = document.createElement("button");
                    btn.className = "page-link";
                    btn.textContent = paginas[i];
                    btn.addEventListener("click", () => {
                        paginaActual = paginas[i];
                        mostrarPagina();
                    });
                    li.appendChild(btn);
                    pagination.insertBefore(li, next);
                }

                prevBtn.parentElement.classList.toggle("disabled", paginaActual === 1);
                nextBtn.parentElement.classList.toggle("disabled", paginaActual === totalPaginas);
            }

            function mostrarPagina() {
                const inicio = (paginaActual - 1) * filasPorPagina;
                const fin = inicio + filasPorPagina;

                filas.forEach((fila, index) => {
                    fila.style.display = (index >= inicio && index < fin) ? "" : "none";
                });

                const totalVisibles = filas.filter(f => f.style.display !== "none").length;
                const visibleInicio = totalVisibles > 0 ? inicio + 1 : 0;
                const visibleFin = Math.min(fin, totalFilas);

                info.textContent = `Mostrando registros del ${visibleInicio} al ${visibleFin} de un total de ${totalFilas}`;
                renderPaginacion();
            }

            // Botones Anterior / Siguiente
            prevBtn.addEventListener("click", () => {
                if (paginaActual > 1) {
                    paginaActual--;
                    mostrarPagina();
                }
            });

            nextBtn.addEventListener("click", () => {
                if (paginaActual < totalPaginas) {
                    paginaActual++;
                    mostrarPagina();
                }
            });

            // Cambiar cantidad de filas
            selectFilas.addEventListener("change", () => {
                filasPorPagina = parseInt(selectFilas.value);
                paginaActual = 1;
                mostrarPagina();
            });

            // Inicializar
            mostrarPagina();
        });
    </script>

