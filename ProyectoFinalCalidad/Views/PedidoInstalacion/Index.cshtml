                    const clienteFiltro = filtroCliente.value.trim().toLowerCase();
                    const tecnicoFiltro = filtroTecnico.value.trim().toLowerCase();
                    const estadoFiltro = filtroEstado.value.trim().toLowerCase();
                    const obsFiltro = filtroObservaciones.value.trim().toLowerCase();

                    let visible = true;

                    if (pedidoFiltro && !pedido.includes(pedidoFiltro)) visible = false;
                    if (contratoFiltro && !contrato.includes(contratoFiltro)) visible = false;
                    if (clienteFiltro && !cliente.includes(clienteFiltro)) visible = false;
                    if (tecnicoFiltro && !tecnico.includes(tecnicoFiltro)) visible = false;
                    if (estadoFiltro && !estadoText.includes(estadoFiltro)) visible = false;
                    if (obsFiltro && !observaciones.includes(obsFiltro)) visible = false;

                    // Fechas
                    const fechaParts = fechaText.split("/"); // dd/MM/yyyy
                    let fechaFila = null;
                    if (fechaParts.length === 3) {
                        const d = parseInt(fechaParts[0], 10);
                        const m = parseInt(fechaParts[1], 10) - 1;
                        const y = parseInt(fechaParts[2], 10);
                        fechaFila = new Date(y, m, d);
                    }

                    const inicio = filtroFechaInicio.value ? new Date(filtroFechaInicio.value) : null;
                    const fin = filtroFechaFin.value ? new Date(filtroFechaFin.value) : null;

                    if (inicio && fechaFila && fechaFila < inicio) visible = false;
                    if (fin && fechaFila && fechaFila > fin) visible = false;

                    fila.style.display = visible ? "" : "none";
                });
            });

            btnLimpiar.addEventListener("click", function () {
                filtroPedido.value = "";
                filtroEstado.value = "";
                filtroContrato.value = "";
                filtroCliente.value = "";
                filtroTecnico.value = "";
                filtroFechaInicio.value = "";
                filtroFechaFin.value = "";
                filtroObservaciones.value = "";
                filas.forEach(f => f.style.display = "");
            });
        });
    </script>
