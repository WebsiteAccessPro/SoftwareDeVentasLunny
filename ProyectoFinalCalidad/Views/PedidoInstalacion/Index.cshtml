        }

    .container-card-title {
        font-size: 1.7rem;
        font-weight: 700;
        color: #203A43;
        margin-bottom: 1rem;
        border-bottom: 3px solid #009ffd;
        padding-bottom: 8px;
    }

    .content-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 6px 25px rgba(15, 32, 39, 0.1);
        padding: 1.8rem;
