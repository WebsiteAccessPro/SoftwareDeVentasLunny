@page
@{
    // Variables locales
    string titulo = "Cuenta Inhabilitada";
    string mensaje = @"Tu cuenta actualmente no puede acceder al sistema.
                       Esto puede deberse a una suspensión temporal o a que el administrador la ha inhabilitado.
                       Si crees que esto es un error, por favor contacta con nuestro equipo de soporte o con el administrador del sistema.";
}

<style>
    /* ======= CONTENEDOR PRINCIPAL CENTRADO ======= */
    main {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
        background: #f9f9f9;
    }

    /* ======= TARJETA DE MENSAJE ======= */
    .message-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        max-width: 900px;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        overflow: hidden;
        animation: fadeInUp 0.7s ease;
    }

    /* ======= PANEL IZQUIERDO (ADVERTENCIA) ======= */
    .message-left {
        background: linear-gradient(135deg, #e53935, #ff6f61);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 3rem 2rem;
        text-align: center;
    }

        .message-left h1 {
            font-weight: 700;
            font-size: 2.2rem;
            margin-bottom: 1rem;
        }

        .message-left p {
            font-size: 1.05rem;
            opacity: 0.95;
            line-height: 1.5;
        }

    /* ======= PANEL DERECHO ======= */
    .message-right {
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
    }

        .message-right h2 {
            font-weight: 700;
            color: #c62828;
            margin-bottom: 1.5rem;
        }

        .message-right p {
            font-size: 1.1rem;
            color: #333;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

    /* ======= BOTÓN VOLVER AL LOGIN ======= */
    .btn-volver-login {
        display: inline-block;
        padding: 0.9rem 2rem;
        background: #c62828;
        color: #fff;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-volver-login:hover {
            background: #a81e1e;
        }

    /* ======= RESPONSIVE ======= */
    @@media (max-width: 900px) {
        .message-card {
            grid-template-columns: 1fr;
        }

        .message-left {
            display: none;
        }

        .message-right {
            padding: 2rem 1.5rem;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<main>
    <div class="message-card">
        <!-- PANEL IZQUIERDO -->
        <div class="message-left">
            <h1>Atención</h1>
            <p>Gestionamos tu seguridad y la de todos nuestros usuarios. Tu cuenta ha sido temporalmente inhabilitada.</p>
        </div>

        <!-- PANEL DERECHO -->
        <div class="message-right">
            <h2>@titulo</h2>
            <p>@Html.Raw(mensaje)</p>
            <a href="/Identity/Account/Login" class="btn-volver-login">Volver al Login</a>
        </div>
    </div>
</main>
