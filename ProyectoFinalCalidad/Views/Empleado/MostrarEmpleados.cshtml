    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const eliminarModal = document.getElementById("EliminarEmpleadoModal");
            const nombreEmpleado = document.getElementById("nombreEmpleadoEliminar");
            const dniInput = document.getElementById("dniConfirmacion");
            const dniCorrecto = document.getElementById("dniEmpleadoCorrecto");
            const empleadoIdInput = document.getElementById("empleadoIdEliminar");
            const btnConfirmar = document.getElementById("btnConfirmarEliminar");

            eliminarModal.addEventListener("show.bs.modal", function (event) {
                const button = event.relatedTarget;
                const id = button.getAttribute("data-id");
                const nombre = button.getAttribute("data-nombre");
                const dni = button.getAttribute("data-dni");

                nombreEmpleado.textContent = nombre;
                dniCorrecto.value = dni;
                empleadoIdInput.value = id;
                dniInput.value = "";
            });

                btnConfirmar.addEventListener("click", function () {
                const dniIngresado = dniInput.value.trim();
                const dniEsperado = dniCorrecto.value;

                if (dniIngresado === "") {
                    alert("Por favor ingresa el DNI para confirmar.");
                    return;
                }

                if (dniIngresado !== dniEsperado) {
                    alert("El DNI ingresado no coincide con el del empleado.");
                    return;
                }

                const empleadoId = empleadoIdInput.value;
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const formData = new FormData();
                formData.append("__RequestVerificationToken", token);
                formData.append("id", empleadoId);

                fetch("/Empleado/EliminarEmpleado", {
                    method: "POST",
                    body: formData
                })
                .then(res => {
                    if (res.ok) {
                        location.reload();
                    } else {
                        alert("No se pudo eliminar el empleado. Puede tener un contrato asociado.");
                    }
                })
            });

        });
    </script>

