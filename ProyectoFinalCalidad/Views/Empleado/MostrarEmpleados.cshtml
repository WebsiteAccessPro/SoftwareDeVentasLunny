@model List<ProyectoFinalCalidad.Models.Empleado>
@{
    ViewData["Title"] = "Administración de Empleados";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* ===== CONTENEDOR PRINCIPAL ===== */
    .main-container {
        width: 100%;
        max-width: 1600px;
        margin: 30px auto;
        padding: 0 10px;
    }

    /* ===== MODO OSCURO: Botón Limpiar en rojo oscuro ===== */
    html[data-theme="dark"] #btnLimpiar.btn-danger.btn-filter,
    [data-bs-theme="dark"] #btnLimpiar.btn-danger.btn-filter,
    .dark-mode #btnLimpiar.btn-danger.btn-filter {
        background-color: #8B0000; /* rojo oscuro */
        border-color: #8B0000;
        color: #f5f7fa;
    }

        html[data-theme="dark"] #btnLimpiar.btn-danger.btn-filter:hover,
        [data-bs-theme="dark"] #btnLimpiar.btn-danger.btn-filter:hover,
        .dark-mode #btnLimpiar.btn-danger.btn-filter:hover {
            background-color: #a40000;
            border-color: #a40000;
        }

    html[data-theme="dark"] .btn-add,
    [data-bs-theme="dark"] .btn-add,
    .dark-mode .btn-add {
        background-color: #0b3d2e;
        border-color: #0b3d2e;
        color: #f5f7fa;
    }

        html[data-theme="dark"] .btn-add:hover,
        [data-bs-theme="dark"] .btn-add:hover,
        .dark-mode .btn-add:hover {
            background-color: #06261a;
            border-color: #06261a;
        }

    .badge-pending {
        display: inline-block;
        padding: 0.25em 0.6em;
        font-size: 0.75rem;
        font-weight: 600;
        color: white;
        background-color: #ff6f00;
        border-radius: 0.5rem;
        text-align: center;
    }

    .actions-cell > div {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 6px;
        width: 100%;
    }

    /* ======= MODAL MEJORADO ======= */
    .dashboard-modal {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        animation: fadeInUp 0.7s ease;
    }

        .dashboard-modal .modal-header {
            background: linear-gradient(135deg, #009ffd, #2a2a72);
            color: #fff;
            border-bottom: none;
            padding: 1.5rem 2rem;
        }

            .dashboard-modal .modal-header .btn-close {
                filter: brightness(0.9);
            }

    /* ======= NUEVO ESTILO PARA EL MODAL ======= */
    .stat-card {
        flex: 1 1 200px;
        background: #fff;
        text-align: center;
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(0,0,0,0.12);
        }

    .stat-number {
        color: #0077cc;
        font-size: 2rem;
    }

    .stat-label {
        font-size: 1rem;
        color: #555;
        margin-top: 0.5rem;
        font-weight: 500;
    }

    /* Progreso visual */
    .progress {
        border-radius: 0.5rem;
        background: #e9ecef;
    }

    .progress-bar {
        border-radius: 0.5rem;
    }

    /* Gradientes para tarjetas de resumen */
    .bg-gradient {
        background: linear-gradient(135deg, #009ffd, #2a2a72);
        color: #fff;
    }

    .bg-gradient-light {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        color: #fff;
    }

    /* Botones exportar */
    .stat-export button {
        border-radius: 0.6rem;
        font-weight: 600;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .stat-export button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

    /* Contenedor del gráfico */
    .chart-container {
        background: #fff;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }


    /* ======= ANIMACIÓN FADE IN ======= */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ======= RESPONSIVE ======= */
    @@media (max-width: 900px) {

        .stat-card {
            width: 100%;
        }
    }


    /* ===== ANIMACIÓN LIGERA ===== */
    @@keyframes fadeUp {
        0% {
            opacity: 0;
            transform: translateY(15px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===== INPUTS ===== */
    .input-group {
        display: flex;
        width: 100%;
        margin-bottom: 0.6rem;
    }

    .input-group-prepend {
        display: flex;
    }

    .input-group-text {
        background-color: #f1f1f1;
        border: 1px solid #ccc;
        padding: 0.4rem 0.6rem;
        font-weight: 500;
        color: #203A43;
        border-radius: 0.5rem 0 0 0.5rem;
        font-size: 0.85rem;
    }

    .input-group .form-control {
        border-radius: 0 0.5rem 0.5rem 0;
        border: 1px solid #ccc;
        padding: 0.45rem 0.65rem;
        font-size: 0.85rem;
    }

        .input-group .form-control:focus {
            border-color: #009ffd;
            box-shadow: 0 0 0 0.2rem rgba(0, 159, 253, 0.25);
        }

    /* ===== CARD CONTENEDOR ===== */
    .container-card {
        background: linear-gradient(145deg, #ffffff, #f9fbff);
        border-radius: 1.2rem;
        box-shadow: 0 10px 35px rgba(15, 32, 39, 0.12);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: relative;
        animation: fadeUp 0.7s ease forwards;
    }

        .container-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            height: 6px;
            width: 100%;
            background: linear-gradient(90deg, #009ffd, #6a4c93);
            border-radius: 1.2rem 1.2rem 0 0;
        }

    .container-card-title {
        font-size: 1.7rem;
        font-weight: 700;
        color: #203A43;
        margin-bottom: 1rem;
        border-bottom: 3px solid #009ffd;
        padding-bottom: 8px;
    }

    /* ===== CARD INTERNO ===== */
    .content-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 6px 25px rgba(15, 32, 39, 0.1);
        padding: 1.8rem;
        transition: all 0.3s ease-in-out;
    }

        .content-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(15, 32, 39, 0.15);
        }

    /* HEADER CARD */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 18px;
        flex-wrap: wrap;
    }

    .page-title {
        font-size: 1.35rem;
        font-weight: 600;
    }

    /* ===== BOTONES ===== */
    .btn-add, .btn-primary, .btn-secondary, .btn-danger, .btn-info, .btn-filter {
        font-size: 0.95rem;
        padding: 8px 18px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
    }

    /* Filtros */
    .btn-filter {
        padding: 8px 18px;
    }

    /* Colores botones */
    .btn-add {
        background-color: #3A7CA5;
        color: #fff;
        border: none;
    }

        .btn-add:hover {
            background-color: #2c5d7d;
            transform: translateY(-1px);
        }

    .btn-primary {
        background-color: #009ffd;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #006bbd;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #6a4c93;
        color: #fff;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #52396e;
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: #e74c3c;
        color: #fff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: translateY(-1px);
        }

    .btn-info {
        background-color: #f39c12;
        color: #fff;
        border: none;
    }

        .btn-info:hover {
            background-color: #d68910;
            transform: translateY(-1px);
        }

    /* ===== CONTENEDOR DE LA TABLA ===== */
    .table-container {
        border-radius: 1rem;
        overflow-x: auto;
        overflow-y: hidden;
        background: #fff;
        box-shadow: 0 5px 18px rgba(0,0,0,0.05);
        box-sizing: border-box;
    }

    #rowsPerPage {
        border-radius: 8px;
        background-color: #f9f9f9;
    }


    /* ===== TABLA ===== */
    table.custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.88rem;
        table-layout: auto;
    }

        /* Encabezados */
        table.custom-table thead {
            background: linear-gradient(90deg,#009ffd,#6a4c93);
            color: white;
            font-weight: 600;
        }

            table.custom-table thead th {
                text-align: center;
                padding: 10px 14px;
                vertical-align: middle;
            }

        /* Celdas de contenido */
        table.custom-table th,
        table.custom-table td {
            padding: 10px 14px;
            text-align: left;
            vertical-align: middle;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            width: 1%;
        }

            table.custom-table th.actions,
            table.custom-table td.actions {
                position: sticky;
                right: 0;
                background: #fff;
                z-index: 3;
            }

        /* Filas */
        table.custom-table tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: background-color 0.25s ease, transform 0.2s ease;
            transform-origin: center center;
        }

            /* Animación hover */
            table.custom-table tbody tr:hover {
                background: #f8faff;
                transform: scaleY(1.01);
            }

        /* Animación interna de celdas */
        table.custom-table tbody td > div {
            transition: transform 0.2s ease;
        }

        table.custom-table tbody td:hover > div {
            transform: scale(1.01);
        }

    /* Scroll suave opcional */
    .table-container::-webkit-scrollbar {
        height: 8px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background-color: rgba(0,0,0,0.2);
        border-radius: 4px;
    }

    .table-container::-webkit-scrollbar-track {
        background: transparent;
    }



    /* ===== BADGES ESTADO ===== */
    .status-badge {
        padding: 4px 10px;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.75rem;
        display: inline-block;
        text-transform: capitalize;
    }

    .active-badge {
        background-color: rgba(46, 204, 113, 0.18);
        color: #27ae60;
        border: 1px solid rgba(46, 204, 113, 0.35);
    }

    .inactive-badge {
        background-color: rgba(149, 165, 166, 0.18);
        color: #7f8c8d;
        border: 1px solid rgba(149, 165, 166, 0.35);
    }

    /* ===== BOTONES DE ACCIÓN EN TABLA ===== */
    .action-btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        border: 1px solid;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .btn-edit {
        color: #3A7CA5;
        border-color: #3A7CA5;
        background: transparent;
    }

        .btn-edit:hover {
            background-color: #3A7CA5;
            color: #fff;
        }

    .btn-disable {
        color: #e74c3c;
        border-color: #e74c3c;
        background: transparent;
    }

        .btn-disable:hover {
            background-color: #e74c3c;
            color: #fff;
        }

    .btn-disabled {
        color: #95a5a6;
        border-color: #95a5a6;
        background: transparent;
        cursor: not-allowed;
    }

    /* ===== FILTROS ===== */
    .filter-card {
        position: relative;
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.8rem;
        padding: 0.8rem 0;
    }

    /* ===== ACCIONES DE FILTROS ===== */
    .filter-actions {
        position: static;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 10px;
        width: 100%;
        box-sizing: border-box;
    }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 1200px) {
        .filter-grid {
            grid-template-columns: repeat(3,1fr);
        }
    }

    @@media (max-width: 992px) {
        .filter-grid {
            grid-template-columns: repeat(2,1fr);
        }
    }

    @@media (max-width: 768px) {
        .main-container {
            padding: 0 15px;
        }

        .content-card {
            padding: 15px;
        }

        .header-section {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .filter-card {
            padding-bottom: 80px;
        }

        .filter-actions {
            position: static;
            justify-content: flex-start;
            margin-top: 10px;
        }
    }

    @@media (max-width: 576px) {
        .filter-grid {
            grid-template-columns: 1fr;
        }
    }

    /* ===== FOOTER DE TABLA ===== */
    .table-footer {
        padding: 0.85rem 1.25rem;
        background: #f9fafb;
        border-top: 1px solid #e5e7eb;
        border-radius: 0 0 1rem 1rem;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.04);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    /* ===== TEXTO INFORMATIVO ===== */
    #tableInfo {
        font-size: 0.9rem;
        color: #6b7280;
    }

    /* ===== PAGINACIÓN ===== */
    .pagination {
        display: flex;
        gap: 0.3rem;
        margin-bottom: 0;
    }

        .pagination .page-item {
            list-style: none;
        }

            .pagination .page-item .page-link {
                color: #2563eb;
                border: 1px solid #d1d5db;
                background: #fff;
                border-radius: 0.5rem;
                font-size: 0.875rem;
                font-weight: 500;
                padding: 0.35rem 0.75rem;
                transition: all 0.25s ease;
                box-shadow: 0 1px 2px rgba(0,0,0,0.05);
            }

                .pagination .page-item .page-link:hover {
                    background-color: #eff6ff;
                    border-color: #93c5fd;
                    color: #1d4ed8;
                    transform: translateY(-1px);
                }

            /* ===== PÁGINA ACTIVA ===== */
            .pagination .page-item.active .page-link {
                background: linear-gradient(135deg, #2563eb, #3b82f6);
                color: #fff;
                border-color: #2563eb;
                box-shadow: 0 2px 8px rgba(37,99,235,0.25);
                transform: scale(1.05);
            }

            /* ===== DESACTIVADO ===== */
            .pagination .page-item.disabled .page-link {
                opacity: 0.5;
                background: #f3f4f6;
                pointer-events: none;
            }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 10px;
        border-radius: 6px;
        transition: 0.2s;
    }

        .btn-delete:hover {
            background-color: #bb2d3b;
            transform: scale(1.05);
        }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 576px) {
        .table-footer {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }

        .pagination {
            justify-content: center;
        }
    }
</style>


<div class="main-container">
    <!-- CARD CONTENEDOR DE FILTROS Y TABLA -->
    <div class="container-card">

        <div class="container-card-title">Administración de Empleados</div>

        <!-- CARD DE FILTROS / CONSULTAS -->
        <div class="content-card filter-card">
            <div class="header-section">
                <h2 class="page-title">Filtros de Empleados</h2>
            </div>

            <div class="filter-grid">
                <!-- EMPLEADO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">EMPLEADO</span>
                    </div>
                    <input type="text" class="form-control" id="filtroEmpleado" placeholder="Nombre o DNI del empleado">
                </div>

                <!-- ESTADO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">ESTADO</span>
                    </div>
                    <select class="form-control" id="filtroEstado">
                        <option value="">Seleccionar Estado</option>
                        <option value="activo">Activo</option>
                        <option value="inhabilitado">Inhabilitado</option>
                    </select>
                </div>

                <!-- FECHA INICIO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">FECHA INICIO</span>
                    </div>
                    <input type="date" class="form-control" id="filtroFechaInicio">
                </div>

                <!-- FECHA FIN -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">FECHA FIN</span>
                    </div>
                    <input type="date" class="form-control" id="filtroFechaFin">
                </div>

                <!-- CARGO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">CARGO</span>
                    </div>
                    <select class="form-control" id="filtroCargo">
                        <option value="">Seleccionar Cargo</option>
                        <option value="jefe_soporte">Jefe de Soporte Técnico</option>
                        <option value="jefe_almacen">Jefe de Almacén</option>
                        <option value="jefe_servicio">Jefe de Servicio</option>
                        <option value="asesor_comercial">Asesor Comercial</option>
                        <option value="pendiente">Pendiente</option>
                        <option value="tecnico_instalacion">Técnico de Instalación</option>
                    </select>
                </div>

                <!-- TELÉFONO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">TELÉFONO</span>
                    </div>
                    <input type="text" class="form-control" id="filtroTelefono" placeholder="Número de teléfono">
                </div>

                <!-- CORREO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">CORREO</span>
                    </div>
                    <input type="email" class="form-control" id="filtroCorreo" placeholder="Correo electrónico">
                </div>
            </div>

            <div class="filter-actions">
                <button id="btnConsultar" type="button" class="btn btn-info btn-filter">
                    <i class="bi bi-search"></i> Consultar
                </button>
                <button id="btnLimpiar" type="button" class="btn btn-danger btn-filter">
                    <i class="bi bi-x-circle"></i> Limpiar Filtros
                </button>
            </div>
        </div>

        <!-- CARD DE TABLA DE EMPLEADOS -->
        <div class="content-card">
            <div class="header-section d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="d-flex align-items-center gap-2">
                    <label for="rowsPerPage" class="form-label mb-0 fw-semibold">Mostrar:</label>
                    <select id="rowsPerPage" class="form-select form-select-sm w-auto">
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Agregar" class="btn btn-add">
                        <i class="fas fa-plus-circle"></i> Agregar Nuevo
                    </a>
                </div>
            </div>

            <div class="table-container mt-3">
                <table id="tablaEmpleados" class="custom-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>DNI</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Cargo</th>
                            <th>Estado</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th class="actions-cell">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td>@Html.Raw(emp.nombres)</td>
                                <td>@Html.Raw(emp.dni)</td>
                                <td>@Html.Raw(emp.correo)</td>
                                <td>@Html.Raw(emp.telefono)</td>
                                <td>
                                    @if (emp.Cargo?.titulo_cargo != null && emp.Cargo.titulo_cargo.ToLower() == "pendiente")
                                    {
                                        <span class="badge badge-pending">
                                            @Html.Raw(emp.Cargo.titulo_cargo)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.Raw(emp.Cargo?.titulo_cargo)
                                    }
                                </td>
                                <td>
                                    <span class="status-badge @(emp.estado == "activo" ? "active-badge" : "inactive-badge")">
                                        @Html.Raw(emp.estado)
                                    </span>
                                </td>
                                <td>@Html.Raw(emp.fecha_inicio?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@Html.Raw(emp.fecha_fin?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td class="actions-cell">
                                    <div>
                                        <a asp-action="Editar" asp-route-id="@emp.empleado_id" class="action-btn btn-edit">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @if (emp.estado == "activo")
                                        {
                                            <a href="#"
                                               class="action-btn btn-disable"
                                               data-bs-toggle="modal"
                                               data-bs-target="#InhabilitarEmpleado"
                                               data-id="@emp.empleado_id"
                                               data-nombre="@System.Net.WebUtility.HtmlEncode(emp.nombres)">
                                                <i class="fas fa-user-times"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="action-btn btn-disabled" disabled>
                                                <i class="fas fa-user-times"></i>
                                            </button>
                                        }
