@model ProyectoFinalCalidad.Models.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}

<style>
    :root {
        --primary: #009ffd;
        --accent: #6a4c93;
        --text-dark: #1e2a35;
        --text-light: #6b7280;
        --border: #d0d7de;
        --bg-light: #f9fafb;
        --danger: #e63946;
        --success: #28a745;
    }

    .form-container {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 850px;
        margin: 60px auto;
        overflow: hidden;
        animation: fadeIn 0.5s ease-in-out;
    }

    .form-header {
        background: linear-gradient(90deg, var(--primary), var(--accent));
        color: #fff;
        padding: 18px 28px;
        font-size: 1.4rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 12px;
        letter-spacing: 0.3px;
    }

        .form-header i {
            font-size: 1.5rem;
        }

    .form-body {
        padding: 40px;
    }

    .form-columns {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 24px 28px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 6px;
        font-size: 0.95rem;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid var(--border);
        border-radius: 10px;
        background: #fff;
        transition: all 0.25s ease;
        font-size: 0.9rem;
    }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 159, 253, 0.15);
            outline: none;
        }

    /* === SECCIÓN DE CONTRASEÑA === */
    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--accent);
        margin-top: 35px;
        margin-bottom: 15px;
        border-left: 4px solid var(--accent);
        padding-left: 8px;
    }

    .password-group {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 20px;
    }

    .password-input-group {
        position: relative;
        display: flex;
        align-items: center;
    }

    .password-input {
        flex: 1;
        padding: 10px 14px;
        border: 1px solid var(--border);
        border-radius: 10px;
        font-size: 0.9rem;
        transition: border-color 0.25s;
        padding-right: 85px;
    }

        .password-input:focus {
            border-color: var(--primary);
        }

    .password-copy,
    .password-toggle {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 5px;
        color: var(--text-light);
        transition: color 0.3s, transform 0.3s;
    }

        .password-copy:hover,
        .password-toggle:hover {
            color: var(--primary);
            transform: translateY(-50%) scale(1.1);
        }

    .password-copy {
        right: 40px;
    }

    .password-toggle {
        right: 8px;
    }

    .password-copy.copied i {
        color: var(--success);
    }

    .alert-danger {
        background-color: rgba(230, 57, 70, 0.1);
        border: 1px solid rgba(230, 57, 70, 0.25);
        color: var(--danger);
        border-radius: 10px;
        padding: 12px 14px;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    .text-danger {
        color: var(--danger);
        font-size: 0.8rem;
        margin-top: 3px;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 35px;
    }

    .btn {
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 0.95rem;
    }

    .btn-primary {
        background: linear-gradient(90deg, var(--primary), var(--accent));
        color: white;
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0, 159, 253, 0.3);
        }

    .btn-secondary {
        background: #fff;
        border: 1px solid var(--accent);
        color: var(--accent);
    }

        .btn-secondary:hover {
            background-color: var(--accent);
            color: #fff;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .form-body {
            padding: 25px;
        }

        .btn-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="form-container">
    <div class="form-header">
        <i class="fas fa-user-edit"></i>
        @ViewData["Title"]
    </div>

    <div class="form-body">
        <form asp-action="EditarEmpleado" asp-controller="Empleado" asp-route-id="@Model.empleado_id" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="empleado_id" />

            <div class="form-columns">
                <div class="form-group">
                    <label asp-for="cargo_id" class="form-label">Cargo</label>
                    <select asp-for="cargo_id" asp-items="ViewBag.Cargos" class="form-control">
                        <option value="">-- Seleccione un cargo --</option>
                    </select>
                    <span asp-validation-for="cargo_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="nombres" class="form-label">Nombre</label>
                    <input asp-for="nombres" class="form-control" required />
                    <span asp-validation-for="nombres" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="dni" class="form-label">DNI</label>
                    <input asp-for="dni" class="form-control" maxlength="8" placeholder="Ingrese 8 dígitos" />
                    <span asp-validation-for="dni" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="telefono" class="form-label">Teléfono</label>
                    <input asp-for="telefono" class="form-control" maxlength="9" placeholder="Ingrese 9 dígitos" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="correo" class="form-label">Correo</label>
                    <input asp-for="correo" type="email" class="form-control" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="estado" class="form-label">Estado</label>
                    <select asp-for="estado" class="form-control">
                        <option value="activo">Activo</option>
                        <option value="inhabilitado">Inhabilitado</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fecha_inicio" class="form-label">Fecha Inicio</label>
                    <input asp-for="fecha_inicio" type="date" class="form-control" required />
                    <span asp-validation-for="fecha_inicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fecha_fin" class="form-label">Fecha Fin</label>
                    <input asp-for="fecha_fin" type="date" class="form-control" />
                    <span asp-validation-for="fecha_fin" class="text-danger"></span>
                </div>
            </div>

            <div class="section-title">Gestión de Contraseña</div>

            <div class="password-group">
                <div class="form-group">
                    <label class="form-label">Contraseña Actual</label>
                    <div class="password-input-group">
                        <input type="password" class="password-input" id="currentPassword" value="@Model.password" readonly />
                        <button type="button" class="password-copy" onclick="copyPassword('currentPassword', this)" title="Copiar contraseña">
                            <i class="fas fa-copy"></i>
                        </button>
                        <button type="button" class="password-toggle" onclick="togglePasswordVisibility('currentPassword', this)" title="Mostrar/Ocultar contraseña">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Nueva Contraseña</label>
                    <div class="password-input-group">
                        <input type="password" class="password-input" name="NewPassword" id="NewPassword" placeholder="Ingrese nueva contraseña" />
                        <button type="button" class="password-copy" onclick="copyPassword('NewPassword', this)" title="Copiar nueva contraseña">
                            <i class="fas fa-copy"></i>
                        </button>
                        <button type="button" class="password-toggle" onclick="togglePasswordVisibility('NewPassword', this)" title="Mostrar/Ocultar contraseña">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <input type="hidden" asp-for="password" />
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                @{
                    var rolUsuario = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
                    var accionCancelar = (!string.IsNullOrEmpty(rolUsuario) && rolUsuario.Equals("Administrador", StringComparison.OrdinalIgnoreCase))
                    ? "MostrarEmpleadosAdmin"
                    : "MostrarEmpleados";
                }
                <a asp-action="@accionCancelar" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        function togglePasswordVisibility(fieldId, trigger) {
            const field = document.getElementById(fieldId);
            const type = field.type === 'password' ? 'text' : 'password';
            field.type = type;
            const icon = trigger.querySelector('i');
            icon.className = type === 'password' ? 'fas fa-eye' : 'fas fa-eye-slash';
        }

        function copyPassword(fieldId, trigger) {
            const field = document.getElementById(fieldId);
            navigator.clipboard.writeText(field.value || '').then(() => {
                trigger.classList.add('copied');
                const icon = trigger.querySelector('i');
                icon.className = 'fas fa-check';
                setTimeout(() => {
                    trigger.classList.remove('copied');
                    icon.className = 'fas fa-copy';
                }, 1500);
            }).catch(() => alert('No se pudo copiar al portapapeles.'));
        }
    </script>
}

