@model ProyectoFinalCalidad.Models.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}

<style>
    body {
        background-color: #f0f8ff;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(15, 32, 39, 0.1);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        max-width: 850px;
    }

    .form-title {
        color: #203A43;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
        font-size: 1.8rem;
    }

    .form-columns {
        display: flex;
        gap: 30px;
    }

    .form-column {
        flex: 1;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #2c3e50;
    }

    .form-control {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #dfe6e9;
        border-radius: 8px;
        transition: all 0.3s;
        font-family: 'Poppins', sans-serif;
    }

        .form-control:focus {
            border-color: #3A7CA5;
            box-shadow: 0 0 0 0.25rem rgba(58, 124, 165, 0.25);
            outline: none;
        }

        .form-control::placeholder {
            color: #95a5a6;
            font-size: 0.9rem;
        }

    .input-group {
        display: flex;
        align-items: center;
    }

        .input-group .form-control {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

    .input-group-btn {
        border: 1px solid #dfe6e9;
        border-left: none;
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
        background: white;
        padding: 0 12px;
        height: 42px;
        display: flex;
        align-items: center;
        cursor: pointer;
        transition: all 0.3s;
    }

        .input-group-btn:hover {
            background-color: #f8f9fa;
        }

    .btn-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        justify-content: center;
    }

    .btn {
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
        cursor: pointer;
        font-family: 'Poppins', sans-serif;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background-color: #3A7CA5;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2c5d7d;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(58, 124, 165, 0.3);
        }

    .btn-secondary {
        background-color: white;
        color: #3A7CA5;
        border: 1px solid #3A7CA5;
    }

    .text-danger {
        color: #e74c3c;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .text-muted {
        color: #95a5a6;
        font-size: 0.8rem;
    }

    .alert-danger {
        background-color: rgba(231, 76, 60, 0.15);
        border: 1px solid rgba(231, 76, 60, 0.3);
        color: #e74c3c;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }

    @@media (max-width: 768px) {
        .form-container {
            padding: 20px;
        }

        .form-columns {
            flex-direction: column;
            gap: 0;
        }

        .btn-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
    /* Estilo específico para el grupo de contraseña */
    .password-group {
        margin-bottom: 1.5rem;
    }

    .password-input-group {
        display: flex;
        margin-bottom: 8px;
    }

    .password-input {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #dfe6e9;
        border-right: none;
        border-radius: 8px 0 0 8px;
        transition: all 0.3s;
    }

    .password-toggle {
        width: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
        border: 1px solid #dfe6e9;
        border-left: none;
        border-radius: 0 8px 8px 0;
        cursor: pointer;
        transition: all 0.3s;
    }

        .password-toggle:hover {
            background-color: #f8f9fa;
        }

        .password-toggle i {
            color: #95a5a6;
            transition: all 0.3s;
        }

        .password-toggle:hover i {
            color: #3A7CA5;
        }
</style>

<div class="form-container">
    <h2 class="form-title">@ViewData["Title"]</h2>

    <form asp-action="EditarEmpleado" asp-controller="Empleado" asp-route-id="@Model.empleado_id" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
        <input type="hidden" asp-for="empleado_id" />

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="form-columns">
            <!-- Columna Izquierda -->
            <div class="form-column">
                <!-- Campo Cargo -->
                <div class="form-group">
                    <label asp-for="cargo_id" class="form-label">Cargo</label>
                    <select asp-for="cargo_id" asp-items="ViewBag.Cargos" class="form-control">
                        <option value="">-- Seleccione un cargo --</option>
                    </select>
                    <span asp-validation-for="cargo_id" class="text-danger"></span>
                </div>

                <!-- Campo Nombres -->
                <div class="form-group">
                    <label asp-for="nombres" class="form-label">Nombre</label>
                    <input asp-for="nombres" class="form-control" required />
                    <span asp-validation-for="nombres" class="text-danger"></span>
                </div>

                <!-- Campo DNI -->
                <div class="form-group">
                    <label asp-for="dni" class="form-label">DNI</label>
                    <input asp-for="dni" class="form-control" required maxlength="8" placeholder="Ingrese 8 dígitos" />
                    <span asp-validation-for="dni" class="text-danger"></span>
                </div>

                <!-- Campo Teléfono -->
                <div class="form-group">
                    <label asp-for="telefono" class="form-label">Teléfono</label>
                    <input asp-for="telefono" class="form-control" maxlength="9" placeholder="Ingrese 9 dígitos" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
            </div>

            <!-- Columna Derecha -->
            <div class="form-column">
                <!-- Campo Correo -->
                <div class="form-group">
                    <label asp-for="correo" class="form-label">Correo</label>
                    <input asp-for="correo" type="email" class="form-control" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <!-- Campo Estado -->
                <div class="form-group">
                    <label asp-for="estado" class="form-label">Estado</label>
                    <select asp-for="estado" class="form-control" required>
                        <option value="activo">Activo</option>
                        <option value="inhabilitado">Inhabilitado</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>

                <!-- Campo Fecha Inicio -->
                <div class="form-group">
                    <label asp-for="fecha_inicio" class="form-label">Fecha Inicio</label>
                    <input asp-for="fecha_inicio" type="date" class="form-control" required />
                    <span asp-validation-for="fecha_inicio" class="text-danger"></span>
                </div>

                <!-- Campo Fecha Fin -->
                <div class="form-group">
                    <label asp-for="fecha_fin" class="form-label">Fecha Fin</label>
                    <input asp-for="fecha_fin" type="date" class="form-control" />
                    <span asp-validation-for="fecha_fin" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Campo Password (ancho completo) -->
        <div class="password-group">
            <label class="form-label">Contraseña</label>

            <!-- Mostrar contraseña actual (solo lectura) -->
            <div class="password-input-group">
                <input type="password"
                       class="password-input"
                       id="currentPassword"
                       value="@Model.password"
                       readonly
                       placeholder="Contraseña actual" />
                <span class="password-toggle" onclick="togglePasswordVisibility('currentPassword')">
                    <i class="fas fa-eye"></i>
                </span>
            </div>

            <!-- Campo para nueva contraseña -->
            <div class="password-group">
                <label class="form-label">Contraseña</label>

                <!-- Campo para nueva contraseña -->
                <div class="password-input-group">
                    <input type="password"
                           class="password-input"
                           name="NewPassword"
                           id="NewPassword"
                           placeholder="Ingrese nueva contraseña (dejar vacío para mantener la actual)" />
                    <span class="password-toggle" onclick="togglePasswordVisibility('NewPassword')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>

                <!-- Campo oculto para mantener la contraseña actual -->
                <input type="hidden" asp-for="password" />
            </div>
        </div>

        <!-- Botones -->
        <div class="btn-container">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
            <a asp-action="MostrarEmpleados" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Validación del lado del cliente
        document.querySelector('form').addEventListener('submit', function(e) {
            const fechaInicio = document.getElementById('fecha_inicio').value;
            if (!fechaInicio) {
                e.preventDefault();
                document.getElementById('fecha_inicio').classList.add('is-invalid');
                document.querySelector('[data-valmsg-for="fecha_inicio"]').textContent = 'La fecha de inicio es requerida';
            }
        });

        function togglePasswordVisibility(fieldId) {
            const field = document.getElementById(fieldId);
            const type = field.getAttribute('type') === 'password' ? 'text' : 'password';
            field.setAttribute('type', type);

            // Cambiar ícono
            const icon = field.nextElementSibling.querySelector('i');
            icon.className = type === 'password' ? 'fas fa-eye' : 'fas fa-eye-slash';
        }
    </script>
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
