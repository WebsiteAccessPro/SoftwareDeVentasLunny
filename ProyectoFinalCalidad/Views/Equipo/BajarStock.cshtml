@model List<ProyectoFinalCalidad.Models.Equipo>

@{
    ViewData["Title"] = "Reducir Stock";
}

<div class="stock-container">
    <div class="stock-card">
        <div class="stock-header reduce">
            <i class="bi bi-arrow-down-circle me-2"></i>
            @ViewData["Title"]
        </div>

        <p class="stock-subtitle">
            Selecciona un equipo e ingresa la cantidad que deseas reducir del inventario.
        </p>

        <form asp-action="BajarStock" method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="equipoId" class="form-label">
                    <i class="bi bi-hdd me-2 text-danger"></i>Equipo
                </label>
                <select name="equipoId" id="equipoId" class="form-select" required>
                    <option value="">Seleccione un equipo</option>
                    @foreach (var equipo in Model)
                    {
                        <option value="@equipo.EquipoId">@equipo.NombreEquipo</option>
                    }
                </select>
                <div class="invalid-feedback">Por favor seleccione un equipo.</div>
            </div>

            <div class="form-group">
                <label for="cantidad" class="form-label">
                    <i class="bi bi-dash-circle me-2 text-danger"></i>Cantidad a reducir
                </label>
                <input type="number" id="cantidad" name="cantidad" class="form-control" required min="1" placeholder="Ejemplo: 5" />
                <div class="invalid-feedback">Ingrese una cantidad válida (mínimo 1).</div>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-arrow-down-circle me-1"></i> Reducir
                </button>

                <a asp-action="MostrarEquiposAdmin" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

@section Styles {
    <style>
        :root {
            --primary: #009ffd;
            --accent: #6a4c93;
            --danger: #e63946;
            --text-dark: #1e2a35;
            --text-light: #6b7280;
            --border: #d0d7de;
            --bg-light: #f9fafb;
        }

        .stock-card {
            background: #fff;
            border-radius: 22px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 750px;
            padding: 55px 60px;
            animation: fadeIn 0.4s ease-in-out;
        }

        .stock-header {
            color: #fff;
            font-size: 1.7rem;
            font-weight: 700;
            border-radius: 14px;
            padding: 18px 26px;
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 22px;
        }

            .stock-header.reduce {
                background: linear-gradient(90deg, var(--danger), var(--accent));
            }

        .stock-subtitle {
            text-align: center;
            color: var(--text-light);
            font-size: 1.05rem;
            margin-bottom: 40px;
        }

        .form-group {
            margin-bottom: 28px;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 8px;
            font-size: 1rem;
        }

        .form-control,
        .form-select {
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 1rem;
            border: 1px solid var(--border);
            transition: all 0.25s ease;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: var(--danger);
                box-shadow: 0 0 0 3px rgba(230, 57, 70, 0.2);
                outline: none;
            }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 18px;
            margin-top: 40px;
        }

        .btn {
            padding: 14px 34px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.25s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-size: 1rem;
        }

        .btn-danger {
            background: linear-gradient(90deg, var(--danger), #ff7675);
            color: white;
            border: none;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(230, 57, 70, 0.25);
            }

        .btn-secondary {
            background: #fff;
            border: 2px solid var(--accent);
            color: var(--accent);
        }

            .btn-secondary:hover {
                background-color: var(--accent);
                color: #fff;
                transform: translateY(-2px);
            }

        .invalid-feedback {
            font-size: 0.9rem;
        }

        /* ===== MODO OSCURO ===== */
        html[data-theme="dark"], [data-bs-theme="dark"], .dark-mode {
            .stock-container

        {
            background-color: #121212;
        }

        .stock-card {
            background-color: #1c1c1c !important;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.6) !important;
            color: white;
        }

        .stock-header.reduce {
            background: linear-gradient(90deg, #e63946, #6a4c93) !important;
            color: white !important;
        }

        .stock-subtitle {
            color: #cfd8dc !important;
        }

        .form-label {
            color: #64D2FF !important;
        }

        .form-control,
        .form-select {
            background-color: #2c2c2c !important;
            border: 1px solid #6a4c93 !important;
            color: #ffffff !important;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: #e63946 !important;
                box-shadow: 0 0 0 3px rgba(230, 57, 70, 0.2) !important;
                outline: none;
                background-color: #2c2c2c !important;
                color: white !important;
            }

        .btn-danger {
            background: linear-gradient(90deg, #e63946, #ff7675) !important;
            color: black !important;
        }

            .btn-danger:hover {
                background: #c62828 !important;
                color: white !important;
            }

        .btn-secondary {
            background-color: #2c2c2c !important;
            border: 2px solid #6a4c93 !important;
            color: #fff !important;
        }

            .btn-secondary:hover {
                background-color: #6a4c93 !important;
                color: white !important;
            }

        .invalid-feedback {
            color: #f28b82 !important;
        }

        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(8px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            .stock-card {
                padding: 35px 25px;
            }

            .btn-container {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
}
