@model List<ProyectoFinalCalidad.Models.Equipo>

@{
    ViewData["Title"] = "Aumentar Stock";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-white py-3" style="background: linear-gradient(to right, #0d6efd, #198754);">
            <h3 class="mb-0"><i class="bi bi-box-seam me-2"></i>@ViewData["Title"]</h3>
        </div>

        <div class="card-body px-4 py-4">
            <form asp-action="AumentarStock" method="post" class="needs-validation" novalidate>
                <div class="mb-4">
                    <label for="equipoId" class="form-label fw-semibold">
                        <i class="bi bi-hdd me-2 text-primary"></i>Equipo
                    </label>
                    <select name="equipoId" id="equipoId" class="form-select shadow-sm" required>
                        <option value="">Seleccione un equipo</option>
                        @foreach (var equipo in Model)
                        {
                            <option value="@equipo.EquipoId">@equipo.NombreEquipo</option>
                        }
                    </select>
                    <div class="invalid-feedback">Por favor seleccione un equipo.</div>
                </div>

                <div class="mb-4">
                    <label for="cantidad" class="form-label fw-semibold">
                        <i class="bi bi-plus-circle me-2 text-success"></i>Cantidad a aumentar
                    </label>
                    <input type="number" id="cantidad" name="cantidad" class="form-control shadow-sm" required min="1" placeholder="Ejemplo: 10" />
                    <div class="invalid-feedback">Ingrese una cantidad válida (mínimo 1).</div>
                </div>

                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-arrow-up-circle me-1"></i> Aumentar
                    </button>
                    <a asp-action="Administrar" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

@section Styles {
    <style>
        .card {
            max-width: 700px;
            margin: 0 auto;
        }

        .form-label {
            color: #2c3e50;
        }

        .form-control, .form-select {
            border-radius: 0.6rem;
            padding: 0.6rem 0.8rem;
            font-size: 1rem;
        }

            .form-control:focus, .form-select:focus {
                border-color: #198754;
                box-shadow: 0 0 0 0.15rem rgba(25, 135, 84, 0.25);
            }

        button.btn {
            border-radius: 0.6rem;
            font-weight: 600;
        }

            button.btn:hover {
                transform: scale(1.03);
                transition: 0.2s ease-in-out;
            }

        .card-header {
            font-weight: 600;
            letter-spacing: 0.3px;
        }
    </style>
}
