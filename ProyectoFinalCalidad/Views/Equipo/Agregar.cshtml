@model ProyectoFinalCalidad.Models.Equipo

@{
    ViewData["Title"] = Model.EquipoId == 0 ? "Agregar Equipo" : "Editar Equipo";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 animate-fade">
        <div class="card-header text-white py-3" style="background: linear-gradient(to right, #0d6efd, #198754);">
            <h3 class="mb-0">
                <i class="bi bi-gear-fill me-2"></i>@ViewData["Title"]
            </h3>
        </div>

        <div class="card-body px-4 py-4">
            <form asp-action="AgregarEditar" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="EquipoId" />

                <!-- Nombre del Equipo -->
                <div class="mb-4">
                    <label asp-for="NombreEquipo" class="form-label fw-semibold">
                        <i class="bi bi-hdd me-2 text-primary"></i>Nombre del Equipo <span class="text-danger">*</span>
                    </label>
                    <input asp-for="NombreEquipo" class="form-control shadow-sm" required />
                    <div class="invalid-feedback">Por favor ingrese el nombre del equipo.</div>
                </div>

                <!-- Descripción -->
                <div class="mb-4">
                    <label asp-for="Descripcion" class="form-label fw-semibold">
                        <i class="bi bi-card-text me-2 text-info"></i>Descripción
                    </label>
                    <textarea asp-for="Descripcion" class="form-control shadow-sm" rows="3" placeholder="Escribe una breve descripción..."></textarea>
                </div>

                <!-- Cantidad en Stock (solo al crear nuevo equipo) -->
                @if (Model.EquipoId == 0)
                {
                    <div class="mb-4">
                        <label asp-for="CantidadStock" class="form-label fw-semibold">
                            <i class="bi bi-box-seam me-2 text-success"></i>Cantidad en Stock <span class="text-danger">*</span>
                        </label>
                        <input asp-for="CantidadStock" type="number" min="0" class="form-control shadow-sm" required placeholder="Ejemplo: 15" />
                        <div class="invalid-feedback">Por favor ingrese la cantidad en stock.</div>
                    </div>
                }

                <!-- Estado -->
                <div class="mb-4">
                    <label asp-for="Estado" class="form-label fw-semibold">
                        <i class="bi bi-toggle-on me-2 text-secondary"></i>Estado
                    </label>
                    <select asp-for="Estado" class="form-select shadow-sm" aria-label="Seleccione el estado del equipo">
                        <option value="disponible">Disponible</option>
                        <option value="pendiente">Pendiente</option>
                        <option value="agotado">Agotado</option>
                    </select>
                </div>

                <!-- Fecha de Registro (solo si ya existe el equipo) -->
                @if (Model.FechaRegistro != default)
                {
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-event me-2 text-warning"></i>Fecha de Registro
                        </label>
                        <input type="text" value="@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")"
                               class="form-control shadow-sm" readonly />
                    </div>
                }

                <!-- Botones -->
                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-save2 me-1"></i> Guardar
                    </button>
                    <a asp-action="Administrar" asp-controller="Equipo" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

@section Styles {
    <style>
        /* Animación de entrada */
        @@keyframes fadeUp {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade {
            animation: fadeUp 0.6s ease forwards;
        }

        .card {
            max-width: 750px;
            margin: 0 auto;
            border-radius: 1rem;
        }

        .card-header {
            font-weight: 600;
            letter-spacing: 0.3px;
        }

        .form-label {
            color: #2c3e50;
            font-size: 1rem;
        }

        .form-control, .form-select {
            border-radius: 0.6rem;
            padding: 0.7rem 0.9rem;
            font-size: 1rem;
        }

            .form-control:focus, .form-select:focus {
                border-color: #198754;
                box-shadow: 0 0 0 0.15rem rgba(25, 135, 84, 0.25);
            }

        .btn {
            border-radius: 0.6rem;
            font-weight: 600;
        }

            .btn:hover {
                transform: scale(1.03);
                transition: 0.2s ease-in-out;
            }
    </style>
}
