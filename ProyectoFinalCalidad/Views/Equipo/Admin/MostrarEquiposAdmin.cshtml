            doc.setTextColor(128, 128, 128);
            doc.text(`Página ${i} de ${totalPages}`, pageWidth - marginRight, doc.internal.pageSize.getHeight() - 10, { align: 'right' });
        }
        
        // Guardar PDF
        doc.save(`Equipos_${fecha.replace(/\//g, '-')}.pdf`);
    }
