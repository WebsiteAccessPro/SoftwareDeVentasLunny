@model IEnumerable<ProyectoFinalCalidad.Models.Equipo>

@{
    ViewData["Title"] = "Administración de Equipos";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* ===== CONTENEDOR PRINCIPAL ===== */
    .main-container {
        width: 100%;
        max-width: 1600px;
        margin: 30px auto;
        padding: 0 10px;
    }

    /* ===== MODO OSCURO: Botón Limpiar en rojo oscuro ===== */
    html[data-theme="dark"] #btnLimpiar.btn-danger.btn-filter,
    [data-bs-theme="dark"] #btnLimpiar.btn-danger.btn-filter,
    .dark-mode #btnLimpiar.btn-danger.btn-filter {
        background-color: #8B0000; /* rojo oscuro */
        border-color: #8B0000;
        color: #f5f7fa;
    }

        html[data-theme="dark"] #btnLimpiar.btn-danger.btn-filter:hover,
        [data-bs-theme="dark"] #btnLimpiar.btn-danger.btn-filter:hover,
        .dark-mode #btnLimpiar.btn-danger.btn-filter:hover {
            background-color: #a40000;
            border-color: #a40000;
        }

    /* ===== MODO OSCURO PARA MODAL ===== */
    html[data-theme="dark"] .modal-content,
    [data-bs-theme="dark"] .modal-content,
    .dark-mode .modal-content {
        background-color: #1c1c1c !important;
        color: #f1f1f1;
        border: none;
        box-shadow: 0 10px 35px rgba(0,0,0,0.8);
    }

    /* Encabezado del modal */
    html[data-theme="dark"] .modal-header,
    [data-bs-theme="dark"] .modal-header,
    .dark-mode .modal-header {
        background: linear-gradient(90deg, #009ffd, #6a4c93);
        color: #fff !important;
    }

        /* Botón cerrar */
        html[data-theme="dark"] .modal-header .btn-close,
        [data-bs-theme="dark"] .modal-header .btn-close,
        .dark-mode .modal-header .btn-close {
            filter: invert(1);
        }

    /* Cuerpo del modal */
    html[data-theme="dark"] .modal-body,
    [data-bs-theme="dark"] .modal-body,
    .dark-mode .modal-body {
        background-color: #2a2a2a !important;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

        /* Listas y badges */
        html[data-theme="dark"] .modal-body .list-group-item,
        [data-bs-theme="dark"] .modal-body .list-group-item,
        .dark-mode .modal-body .list-group-item {
            background-color: #333 !important;
            color: #f1f1f1;
            border: 1px solid #444;
        }

        html[data-theme="dark"] .modal-body .badge.bg-primary {
            background-color: #0d6efd !important;
            color: #fff;
        }

        html[data-theme="dark"] .modal-body .badge.bg-success {
            background-color: #28a745 !important;
            color: #fff;
        }

        html[data-theme="dark"] .modal-body .badge.bg-info {
            background-color: #17a2b8 !important;
            color: #fff;
        }

        html[data-theme="dark"] .modal-body .badge.bg-secondary {
            background-color: #6c757d !important;
            color: #fff;
        }

    /* Pie del modal */
    html[data-theme="dark"] .modal-footer,
    [data-bs-theme="dark"] .modal-footer,
    .dark-mode .modal-footer {
        background-color: #3a3a3a !important;
        border-top: none;
    }

        /* Botones dentro del modal */
        html[data-theme="dark"] .modal-footer .btn,
        [data-bs-theme="dark"] .modal-footer .btn,
        .dark-mode .modal-footer .btn {
            background-color: #6a4c93;
            color: #fff;
            border: none;
        }

            html[data-theme="dark"] .modal-footer .btn:hover,
            [data-bs-theme="dark"] .modal-footer .btn:hover,
            .dark-mode .modal-footer .btn:hover {
                background-color: #3a2c5c;
                color: #fff;
                transform: translateY(-2px);
            }

    /* Centrar contenido de columnas específicas */
    table.custom-table th:nth-child(3),
    table.custom-table th:nth-child(4),
    table.custom-table th:nth-child(5),
    table.custom-table th:nth-child(6),
    table.custom-table td:nth-child(3),
    table.custom-table td:nth-child(4),
    table.custom-table td:nth-child(5),
    table.custom-table td:nth-child(6) {
        text-align: center;
    }

    /* ===== CARD PRINCIPAL ===== */
    .container-card {
        background: linear-gradient(145deg, #ffffff, #f9fbff);
        border-radius: 1.2rem;
        box-shadow: 0 10px 35px rgba(15, 32, 39, 0.12);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: relative;
        animation: fadeUp 0.7s ease forwards;
    }

        .container-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            height: 6px;
            width: 100%;
            background: linear-gradient(90deg, #009ffd, #6a4c93);
            border-radius: 1.2rem 1.2rem 0 0;
        }

    .container-card-title {
        font-size: 1.7rem;
        font-weight: 700;
        color: #203A43;
        margin-bottom: 1rem;
        border-bottom: 3px solid #009ffd;
        padding-bottom: 8px;
    }

    /* ===== CONTENT CARD ===== */
    .content-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 6px 25px rgba(15, 32, 39, 0.1);
        padding: 1.8rem;
        transition: all 0.3s ease-in-out;
    }

        .content-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(15, 32, 39, 0.15);
        }

    /* ===== HEADER DE SECCIÓN ===== */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 18px;
        flex-wrap: wrap;
    }

    /* ===== TITULOS ===== */
    .page-title {
        font-size: 1.35rem;
        font-weight: 600;
    }

    /* ===== FILTROS ===== */
    .filter-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.8rem;
        padding: 0.8rem 0;
    }

    .btn-delete {
        background-color: #dc2626;
        color: #fff;
        border: none;
        padding: 8px 18px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
    }

        .btn-delete:hover {
            background-color: #b91c1c;
            transform: translateY(-1px);
        }


    .filter-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 10px;
        width: 100%;
    }

    .modal-backdrop {
        z-index: 1050 !important;
    }

    .modal {
        z-index: 1060 !important;
    }


    /* ===== INPUTS ===== */
    .input-group {
        display: flex;
        width: 100%;
        margin-bottom: 0.6rem;
    }

    .input-group-prepend {
        display: flex;
    }

    /* ===== BADGES ===== */
    .badge {
        display: inline-block;
        padding: 0.25em 0.6em;
        font-size: 0.75rem;
        font-weight: 600;
        color: white;
        border-radius: 0.5rem;
        text-align: center;
    }

    /* ===== STOCK BAJO ===== */
    .stock-low {
        color: #e74c3c;
        font-weight: 700;
    }

    /* ===== TOAST ALERT ===== */
    .toast-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1055;
    }

    .toast {
        min-width: 250px;
    }

    .input-group-text {
        background-color: #f1f1f1;
        border: 1px solid #ccc;
        padding: 0.4rem 0.6rem;
        font-weight: 500;
        color: #203A43;
        border-radius: 0.5rem 0 0 0.5rem;
        font-size: 0.85rem;
    }

    .input-group .form-control {
        border-radius: 0 0.5rem 0.5rem 0;
        border: 1px solid #ccc;
        padding: 0.45rem 0.65rem;
        font-size: 0.85rem;
    }

        .input-group .form-control:focus {
            border-color: #009ffd;
            box-shadow: 0 0 0 0.2rem rgba(0, 159, 253, 0.25);
        }

    /* ===== TABLA ===== */
    .table-container {
        border-radius: 1rem;
        overflow-x: auto;
        overflow-y: hidden;
        background: #fff;
        box-shadow: 0 5px 18px rgba(0,0,0,0.05);
        box-sizing: border-box;
    }

    table.custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.88rem;
    }

        table.custom-table thead {
            background: linear-gradient(90deg,#009ffd,#6a4c93);
            color: white;
            font-weight: 600;
        }

            table.custom-table thead th {
                text-align: center;
                padding: 10px 14px;
                vertical-align: middle;
            }

        table.custom-table th,
        table.custom-table td {
            padding: 10px 14px;
            text-align: left;
            vertical-align: middle;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

            table.custom-table th.actions,
            table.custom-table td.actions {
                position: sticky;
                right: 0;
                background: #fff;
                z-index: 3;
            }

        table.custom-table tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: background-color 0.25s ease, transform 0.2s ease;
        }

            table.custom-table tbody tr:hover {
                background: #f8faff;
                transform: scaleY(1.01);
            }

    /* ===== BADGES ===== */
    .badge {
        display: inline-block;
        padding: 0.25em 0.6em;
        font-size: 0.75rem;
        font-weight: 600;
        color: white;
        border-radius: 0.5rem;
        text-align: center;
    }

    /* ===== BOTONES DE ACCIÓN EN TABLA ===== */
    .action-btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        border: 1px solid;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    /* Corrige el z-index del modal de Bootstrap */
    .modal {
        z-index: 2000 !important;
    }

    .modal-backdrop {
        z-index: 1999 !important;
    }

    .btn-edit {
        color: #3A7CA5;
        border-color: #3A7CA5;
        background: transparent;
    }

        .btn-edit:hover {
            background-color: #3A7CA5;
            color: #fff;
        }

    .btn-disable {
        color: #e74c3c;
        border-color: #e74c3c;
        background: transparent;
    }

        .btn-disable:hover {
            background-color: #e74c3c;
            color: #fff;
        }

    .btn-disabled {
        color: #95a5a6;
        border-color: #95a5a6;
        background: transparent;
        cursor: not-allowed;
    }

    /* ===== BOTONES ===== */
    .btn-add, .btn-info, .btn-danger, .btn-filter {
        font-size: 0.95rem;
        padding: 8px 18px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
    }

    .btn-add {
        background-color: #3A7CA5;
        color: #fff;
        border: none;
    }

        .btn-add:hover {
            background-color: #2c5d7d;
            transform: translateY(-1px);
        }

    .btn-info {
        background-color: #f39c12;
        color: #fff;
        border: none;
    }

        .btn-info:hover {
            background-color: #d68910;
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: #e74c3c;
        color: #fff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: translateY(-1px);
        }

    /* ===== FOOTER DE TABLA ===== */
    .table-footer {
        padding: 0.85rem 1.25rem;
        background: #f9fafb;
        border-top: 1px solid #e5e7eb;
        border-radius: 0 0 1rem 1rem;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.04);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    #tableInfo {
        font-size: 0.9rem;
        color: #6b7280;
    }

    /* ===== PAGINACIÓN ===== */
    .pagination {
        display: flex;
        gap: 0.3rem;
        margin-bottom: 0;
    }

        .pagination .page-item .page-link {
            color: #2563eb;
            border: 1px solid #d1d5db;
            background: #fff;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.35rem 0.75rem;
            transition: all 0.25s ease;
        }

            .pagination .page-item .page-link:hover {
                background-color: #eff6ff;
                border-color: #93c5fd;
                color: #1d4ed8;
                transform: translateY(-1px);
            }

        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, #2563eb, #3b82f6);
            color: #fff;
            border-color: #2563eb;
            box-shadow: 0 2px 8px rgba(37,99,235,0.25);
            transform: scale(1.05);
        }

    /* ===== ANIMACIONES ===== */
    @@keyframes fadeUp {
        0% {
            opacity: 0;
            transform: translateY(15px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 1200px) {
        .filter-grid {
            grid-template-columns: repeat(3,1fr);
        }
    }

    @@media (max-width: 992px) {
        .filter-grid {
            grid-template-columns: repeat(2,1fr);
        }
    }

    @@media (max-width: 768px) {
        .main-container {
            padding: 0 15px;
        }

        .content-card {
            padding: 15px;
        }

        .header-section {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .filter-actions {
            justify-content: flex-start;
            margin-top: 10px;
        }
    }

    @@media (max-width: 576px) {
        .filter-grid {
            grid-template-columns: 1fr;
        }

        .table-footer {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }

        .pagination {
            justify-content: center;
        }
    }
</style>


<div class="main-container">
    <div class="container-card">

        <div class="container-card-title">Administración de Equipos</div>

        <!-- FILTROS -->
        <div class="content-card filter-card">
            <div class="header-section">
                <h2 class="page-title">Filtros de Equipos</h2>
            </div>

            <div class="filter-grid">
                <!-- Nombre -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">EQUIPO</span>
                    </div>
                    <input type="text" class="form-control" id="filtroNombreEquipo" placeholder="Nombre del equipo">
                </div>

                <!-- ESTADO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">ESTADO</span>
                    </div>
                    <select class="form-control" id="filtroEstado">
                        <option value="">Seleccionar Estado</option>
                        <option value="disponible">Disponible</option>
                        <option value="pendiente">Pendiente</option>
                        <option value="agotado">Agotado</option>
                    </select>
                </div>

                <!-- FECHA REGISTRO -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">FECHA REGISTRO</span>
                    </div>
                    <input type="date" class="form-control" id="filtroFechaRegistro">
                </div>

                <!-- STOCK -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">STOCK</span>
                    </div>
                    <input type="number" class="form-control" id="filtroStockMinimo" placeholder="Stock mínimo">
                </div>
            </div>

            <!-- Descricion -->
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">EQUIPO</span>
                </div>
                <input type="text" class="form-control" id="filtroDescripcionEquipo" placeholder="Descrición del equipo">
            </div>

            <div class="filter-actions">
                <button id="btnConsultar" type="button" class="btn btn-info btn-filter">
                    <i class="bi bi-search"></i> Consultar
                </button>
                <button id="btnLimpiar" type="button" class="btn btn-danger btn-filter">
                    <i class="bi bi-x-circle"></i> Limpiar Filtros
                </button>
            </div>
        </div>

        <!-- TABLA DE EQUIPOS -->
        <div class="content-card">

            <div class="header-section d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="d-flex align-items-center gap-2">
                    <label for="rowsPerPage" class="form-label mb-0 fw-semibold">Mostrar:</label>
                    <select id="rowsPerPage" class="form-select form-select-sm w-auto">
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Agregar" asp-controller="Equipo"
                       class="btn btn-add"
                       style="background-color:#1e40af; color:#fff; border:none; padding:8px 18px; border-radius:10px; display:inline-flex; align-items:center; gap:6px; transition:all 0.2s ease;"
                       onmouseover="this.style.backgroundColor='#1e3a8a'; this.style.transform='translateY(-1px)';"
                       onmouseout="this.style.backgroundColor='#1e40af'; this.style.transform='translateY(0)';">
                        <i class="fas fa-plus-circle"></i> Agregar Nuevo
                    </a>

                    <a asp-action="AumentarStock" asp-controller="Equipo"
                       class="btn btn-add"
                       style="background-color:#be123c; color:#fff; border:none; padding:8px 18px; border-radius:10px; display:inline-flex; align-items:center; gap:6px; transition:all 0.2s ease;"
                       onmouseover="this.style.backgroundColor='#9f1239'; this.style.transform='translateY(-1px)';"
                       onmouseout="this.style.backgroundColor='#be123c'; this.style.transform='translateY(0)';">
                        <i class="fas fa-boxes"></i> Aumentar Stock
                    </a>

                    <a asp-action="BajarStock" asp-controller="Equipo"
                       class="btn btn-add"
                       style="background-color:#6b21a8; color:#fff; border:none; padding:8px 18px; border-radius:10px; display:inline-flex; align-items:center; gap:6px; transition:all 0.2s ease;"
                       onmouseover="this.style.backgroundColor='#581c87'; this.style.transform='translateY(-1px)';"
                       onmouseout="this.style.backgroundColor='#6b21a8'; this.style.transform='translateY(0)';">
                        <i class="fas fa-arrow-down"></i> Bajar Stock
                    </a>

                    <button type="button" 
                            class="btn btn-add" 
                            data-bs-toggle="modal" 
                            data-bs-target="#equiposStatsModal"
                            style="background-color:#0d9488; color:#fff; border:none; padding:8px 18px; border-radius:10px; display:inline-flex; align-items:center; gap:6px; transition:all 0.2s ease;"
                            onmouseover="this.style.backgroundColor='#0f766e'; this.style.transform='translateY(-1px)';"
                            onmouseout="this.style.backgroundColor='#0d9488'; this.style.transform='translateY(0)';">
                        <i class="fas fa-chart-bar"></i> Ver Estadísticas
                    </button>

                </div>
            </div>

            <div class="table-container mt-3">
                <table id="tablaEquipos" class="custom-table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Stock</th>
                            <th>Estado</th>
                            <th>Fecha Registro</th>
                            <th>Última Modificación</th>
                            <th class="actions-cell">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var equipo in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary" style="font-family: monospace; font-size: 0.85rem;">
                                        @equipo.CodigoEquipo
                                    </span>
                                </td>
                                <td>@equipo.NombreEquipo</td>
                                <td>@equipo.Descripcion</td>
                                <td>
                                    <span class="fw-semibold @(equipo.CantidadStock <= 5 ? "text-danger" : "text-success")">
                                        @equipo.CantidadStock
                                    </span>
                                </td>
                                <td>
                                    <span class="badge
                                                    @(equipo.Estado?.ToLower() == "disponible" ? "bg-success" :
                                                                                                                                                                        equipo.Estado?.ToLower() == "pendiente" ? "bg-warning text-dark" :
                                                                                                                                                                        equipo.Estado?.ToLower() == "agotado" ? "bg-danger" :
                                                                                                                                                                        "bg-secondary")">
                                    @equipo.Estado
                                </span>
                            </td>
                            <td>@equipo.FechaRegistro.ToString("dd/MM/yyyy")</td>

                                <td class="text-center">
                                    <div style="display: flex; align-items: center; justify-content: center; gap: 6px;">
                                        <span>
                                            Último cambio:
                                        @{
                                                // Usa la fecha real guardada en BD, si existe
                                                var fechaUltimoCambio = equipo.FechaModificacion != DateTime.MinValue
                                                ? equipo.FechaModificacion
                                                : equipo.FechaRegistro; // si nunca se modificó, usa la fecha de creación
                                            }
                                            @fechaUltimoCambio.ToString("dd/MM/yyyy HH:mm")<br />
                                        </span>
                                    </div>
                                </td>

                                <!-- Acciones -->
                                <td class="actions-cell">
                                    <div style="display:flex; gap:6px; align-items:center; justify-content:center;">

                                        <!-- Editar -->
                                        <a class="action-btn btn-edit" href="/Equipo/Editar/@equipo.EquipoId" title="Editar Equipo">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <!-- Eliminar -->
                                        <a href="#"
                                           class="action-btn btn-delete"
                                           data-bs-toggle="modal"
                                           data-bs-target="#EliminarEquipoModal"
                                           data-id="@equipo.EquipoId"
                                           data-nombre="@System.Net.WebUtility.HtmlEncode(equipo.NombreEquipo)"
                                           title="Eliminar Equipo">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>

                                        <!-- Historial -->
                                        <button class="action-btn btn-history"
