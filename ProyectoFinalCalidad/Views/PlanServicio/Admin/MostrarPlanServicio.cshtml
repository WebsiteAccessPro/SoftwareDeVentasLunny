    <!-- ==================== MODALS DE PLANES ==================== -->
    <script>
        // Función para decodificar entidades HTML (&aacute; → á)
        function decodeHtml(html) {
            const txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }

