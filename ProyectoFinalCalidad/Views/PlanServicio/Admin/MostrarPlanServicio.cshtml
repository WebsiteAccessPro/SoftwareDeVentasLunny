        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 18px;
        flex-wrap: wrap;
    }

    /* ===== TITULOS ===== */
    .page-title {
        font-size: 1.35rem;
        font-weight: 600;
    }

    /* ===== FILTROS ===== */
