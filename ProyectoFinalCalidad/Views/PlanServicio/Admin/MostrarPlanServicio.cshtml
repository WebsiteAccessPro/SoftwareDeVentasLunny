                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="action-btn btn-add"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#HabilitarPlanModal"
                                                    data-id="@plan.PlanId"
                                                    data-nombre="@System.Net.WebUtility.HtmlEncode(plan.NombrePlan)"
                                                    title="Habilitar Plan">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- FOOTER DE TABLA -->
            <div class="table-footer">
                <div id="tableInfo">Mostrando registros del 1 al 10 de un total de @Model.Count()</div>
                <nav>
                    <ul id="pagination" class="pagination">
                        <li class="page-item">
                            <button id="prevPage" class="page-link">Anterior</button>
                        </li>
                        <li class="page-item">
                            <button id="nextPage" class="page-link">Siguiente</button>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

