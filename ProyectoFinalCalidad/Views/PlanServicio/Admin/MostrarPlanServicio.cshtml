        deshabilitarModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var planId = button.getAttribute('data-id');
            var planNombre = decodeHtml(button.getAttribute('data-nombre')); // decodificar

            var modalTitle = deshabilitarModal.querySelector('#nombrePlanDeshabilitar');
            var modalInput = deshabilitarModal.querySelector('#planIdDeshabilitar');

            modalTitle.textContent = planNombre;
            modalInput.value = planId;

            // Actualizar form action
        var form = document.getElementById('deshabilitarPlanForm');
        form.action = '/PlanServicio/DeshabilitarPlanServicio?planServicioId=' + planId;
        });

        // Modal Habilitar Plan
        var habilitarModal = document.getElementById('HabilitarPlanModal');
        habilitarModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var planId = button.getAttribute('data-id');
            var planNombre = decodeHtml(button.getAttribute('data-nombre'));

            var modalTitle = habilitarModal.querySelector('#nombrePlanHabilitar');
            var modalInput = habilitarModal.querySelector('#planIdHabilitar');

            modalTitle.textContent = planNombre;
            modalInput.value = planId;

            // Actualizar form action
        var form = document.getElementById('habilitarPlanForm');
        form.action = '/PlanServicio/HabilitarPlanServicio?planServicioId=' + planId;
        });
    </script>


    <!-- ==================== FILTROS DE PLANES ==================== -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // === Campos de filtro ===
            const filtroNombrePlan = document.getElementById("filtroNombrePlan");
            const filtroTipoServicio = document.getElementById("filtroTipoServicio");
            const filtroEstado = document.getElementById("filtroEstado");
            const filtroPrecioMax = document.getElementById("filtroPrecioMax");
            const filtroVelocidad = document.getElementById("filtroVelocidad");
            const btnConsultar = document.getElementById("btnConsultar");
            const btnLimpiar = document.getElementById("btnLimpiar");

            const filas = document.querySelectorAll("#tablaPlanes tbody tr");
            const norm = (s) => (s || "").toString().trim().toLowerCase();

            // === FUNCIÓN CONSULTAR ===
            btnConsultar.addEventListener("click", function () {
                const nombreValor = norm(filtroNombrePlan.value);
                const tipoValor = norm(filtroTipoServicio.value);
                const estadoValor = norm(filtroEstado.value);
                const precioMax = parseFloat(filtroPrecioMax.value) || null;
                const velocidadValor = parseInt(filtroVelocidad.value) || null;

                filas.forEach(fila => {
                    const celdas = fila.querySelectorAll("td");
                    const nombre = norm(celdas[0]?.textContent);
                    const tipo = norm(celdas[1]?.textContent);
                    const velocidadTxt = celdas[2]?.textContent || "0";
                    const precioTxt = celdas[3]?.textContent || "0";
                    const estado = norm(celdas[4]?.textContent);

                    const velocidad = parseInt(velocidadTxt.replace(/\D/g, "")) || 0;
                    const precio = parseFloat(precioTxt.replace(/[^\d.]/g, "")) || 0;

                    let visible = true;

                    if (nombreValor && !nombre.includes(nombreValor)) visible = false;
                    if (tipoValor && !tipo.includes(tipoValor)) visible = false;
                    if (estadoValor && estado !== estadoValor) visible = false;
                    if (precioMax !== null && precio > precioMax) visible = false;
                    if (velocidadValor !== null && velocidad !== velocidadValor) visible = false;

                    fila.style.display = visible ? "" : "none";
                });
            });

            // === FUNCIÓN LIMPIAR ===
            btnLimpiar.addEventListener("click", function () {
                filtroNombrePlan.value = "";
                filtroTipoServicio.value = "";
                filtroEstado.value = "";
                filtroPrecioMax.value = "";
                filtroVelocidad.value = "";
                filas.forEach(f => f.style.display = "");
            });
        });
    </script>

    <!-- SCRIPT DE PAGINACIÓN DE PLANES -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tabla = document.getElementById("tablaPlanes");
            if (!tabla) return;

            const filas = Array.from(tabla.querySelectorAll("tbody tr"));
            const info = document.getElementById("tableInfo");
            const prevBtn = document.getElementById("prevPage");
            const nextBtn = document.getElementById("nextPage");
            const pagination = document.getElementById("pagination");
            const selectFilas = document.getElementById("rowsPerPage");

            let paginaActual = 1;
            let filasPorPagina = parseInt(selectFilas.value);
            const totalFilas = filas.length;
            let totalPaginas = Math.ceil(totalFilas / filasPorPagina);

            function renderPaginacion() {
                // Limpiar numeración anterior (excepto botones prev/next)
                pagination.querySelectorAll(".page-number, .dots").forEach(el => el.remove());
                totalPaginas = Math.ceil(totalFilas / filasPorPagina);

                const next = document.getElementById("nextPage").parentElement;
                const maxPaginasVisibles = 5;
                let paginas = [];

                if (totalPaginas <= maxPaginasVisibles + 2) {
                    for (let i = 1; i <= totalPaginas; i++) paginas.push(i);
                } else {
                    let start = Math.max(2, paginaActual - 2);
                    let end = Math.min(totalPaginas - 1, paginaActual + 2);

                    if (paginaActual <= 3) {
                        start = 2;
                        end = 5;
                    } else if (paginaActual >= totalPaginas - 2) {
                        start = totalPaginas - 4;
                        end = totalPaginas - 1;
                    }

                    paginas = [1, ...Array.from({ length: end - start + 1 }, (_, i) => start + i), totalPaginas];
                }

                for (let i = 0; i < paginas.length; i++) {
                    if (i > 0 && paginas[i] - paginas[i - 1] > 1) {
                        const dots = document.createElement("li");
                        dots.className = "page-item disabled dots";
                        dots.innerHTML = `<span class="page-link">...</span>`;
                        pagination.insertBefore(dots, next);
                    }

                    const li = document.createElement("li");
                    li.className = `page-item page-number ${paginas[i] === paginaActual ? "active" : ""}`;
                    const btn = document.createElement("button");
                    btn.className = "page-link";
                    btn.textContent = paginas[i];
                    btn.addEventListener("click", () => {
                        paginaActual = paginas[i];
                        mostrarPagina();
                    });
                    li.appendChild(btn);
                    pagination.insertBefore(li, next);
                }

                prevBtn.parentElement.classList.toggle("disabled", paginaActual === 1);
                nextBtn.parentElement.classList.toggle("disabled", paginaActual === totalPaginas);
            }

            function mostrarPagina() {
                const inicio = (paginaActual - 1) * filasPorPagina;
                const fin = inicio + filasPorPagina;

                filas.forEach((fila, index) => {
                    fila.style.display = (index >= inicio && index < fin) ? "" : "none";
                });

                const totalVisibles = filas.filter(f => f.style.display !== "none").length;
                const visibleInicio = totalVisibles > 0 ? inicio + 1 : 0;
                const visibleFin = Math.min(fin, totalFilas);

                info.textContent = `Mostrando registros del ${visibleInicio} al ${visibleFin} de un total de ${totalFilas}`;
                renderPaginacion();
            }

            // Botón "Anterior"
            prevBtn.addEventListener("click", () => {
                if (paginaActual > 1) {
                    paginaActual--;
                    mostrarPagina();
                }
            });

            // Botón "Siguiente"
            nextBtn.addEventListener("click", () => {
                if (paginaActual < totalPaginas) {
                    paginaActual++;
                    mostrarPagina();
                }
            });

            // Cambiar cantidad de filas por página
            selectFilas.addEventListener("change", () => {
                filasPorPagina = parseInt(selectFilas.value);
                paginaActual = 1;
                mostrarPagina();
            });

            // Inicializar paginación
            mostrarPagina();
        });
    </script>

