        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.8rem;
        padding: 0.8rem 0;
    }

    .filter-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 10px;
        width: 100%;
