            justify-content: center;
            align-items: center;
            gap: 6px;
            width: 100%;
        }

        .container-card {
            background: linear-gradient(145deg,#ffffff,#f9fbff);
            border-radius: 1.2rem;
            box-shadow: 0 10px 35px rgba(15,32,39,0.12);
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            position: relative;
            animation: fadeUp 0.7s ease forwards;
        }

            .container-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                height: 6px;
                width: 100%;
                background: linear-gradient(90deg,#009ffd,#6a4c93);
                border-radius: 1.2rem 1.2rem 0 0;
            }

        .container-card-title {
            font-size: 1.7rem;
            font-weight: 700;
            color: #203A43;
            margin-bottom: 1rem;
            border-bottom: 3px solid #009ffd;
            padding-bottom: 8px;
        }

        .content-card {
            background: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 6px 25px rgba(15,32,39,0.1);
            padding: 1.8rem;
            transition: all 0.3s ease-in-out;
        }

            .content-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 35px rgba(15,32,39,0.15);
            }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
            gap: .8rem;
            padding: .8rem 0;
        }

        .filter-actions {
