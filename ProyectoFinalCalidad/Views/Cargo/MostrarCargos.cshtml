        [data-bs-theme="dark"] #btnAgregarCargo,
        .dark-mode #btnAgregarCargo {
            background-color: #1f6f8b; /* teal profundo */
            border-color: #1f6f8b;
            color: #f5f7fa;
        }

        html[data-theme="dark"] #btnAgregarCargo:hover,
        [data-bs-theme="dark"] #btnAgregarCargo:hover,
        .dark-mode #btnAgregarCargo:hover {
            background-color: #2a8ba9;
            border-color: #2a8ba9;
        }
    </style>
