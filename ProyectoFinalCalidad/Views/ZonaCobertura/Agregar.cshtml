@model ProyectoFinalCalidad.Models.ZonaCobertura

@{
    ViewData["Title"] = "Agregar Zona de Cobertura";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<main>
    <div class="form-container">
        <div class="form-header">
            <i class="fas fa-map-marker-alt"></i>
            @ViewData["Title"]
        </div>

        <div class="form-body">
            <form asp-action="Agregar" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-columns">
                    <!-- Columna izquierda -->
                    <div>
                        <div class="form-group">
                            <label asp-for="NombreZona" class="form-label">
                                <i class="fas fa-map-marked-alt text-primary"></i> Nombre de la Zona <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NombreZona" class="form-control" placeholder="Ejemplo: Zona Norte" required />
                            <span asp-validation-for="NombreZona" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Distrito" class="form-label">
                                <i class="fas fa-building text-success"></i> Distrito <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Distrito" class="form-control" placeholder="Ejemplo: Miraflores" required />
                            <span asp-validation-for="Distrito" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="form-label">
                                <i class="fas fa-align-left text-info"></i> Descripción
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" maxlength="255" placeholder="Escribe una breve descripción..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="btn-container">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@section Styles {
    <style>
        :root {
            --primary: #009ffd;
            --accent: #6a4c93;
            --text-dark: #1e2a35;
            --text-light: #6b7280;
            --border: #d0d7de;
            --bg-light: #f9fafb;
            --scale-font: 1.1;
            --scale-padding: 1.1;
        }

        .form-container {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 36px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 960px;
            margin: 12px auto;
            overflow: hidden;
            animation: fadeIn 0.45s ease-in-out;
        }

        .form-header {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            color: #fff;
            padding: calc(16px * var(--scale-padding)) 28px;
            font-size: calc(1.35rem * var(--scale-font));
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

            .form-header i {
                font-size: 1.5rem;
            }

        .form-body {
            padding: calc(30px * var(--scale-padding));
        }

        .form-columns {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 22px 26px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 8px;
            font-size: calc(1rem * var(--scale-font));
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .form-label i {
                font-size: 1.2rem;
            }

        .form-control {
            width: 100%;
            padding: calc(12px * var(--scale-padding)) calc(14px * var(--scale-padding));
            border: 1px solid var(--border);
            border-radius: 12px;
            background: #fff;
            transition: all 0.18s ease;
            font-size: calc(0.98rem * var(--scale-font));
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(0, 159, 253, 0.10);
                outline: none;
            }

        .btn-container {
            display: flex;
            justify-content: start;
            gap: 14px;
            margin-top: 26px;
        }

        .btn {
            padding: calc(12px * var(--scale-padding)) 26px;
            border-radius: 12px;
            font-weight: 700;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-size: calc(0.98rem * var(--scale-font));
        }

        .btn-primary {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            color: #fff;
            border: none;
            box-shadow: 0 6px 18px rgba(0, 159, 253, 0.12);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
            }

        .btn-secondary {
            background: #fff;
            border: 1px solid var(--accent);
            color: var(--accent);
        }

        @@media (max-width: 768px) {
            .form-body {
                padding: 18px;
            }

            .form-container {
                margin: 10px;
                max-width: 100%;
            }

            .btn {
                width: 100%;
            }

            .form-columns {
                grid-template-columns: 1fr;
                gap: 14px;
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(6px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
