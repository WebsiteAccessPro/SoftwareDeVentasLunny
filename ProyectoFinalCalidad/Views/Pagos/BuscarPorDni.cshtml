@{
    ViewData["Title"] = "Buscar Cliente por DNI";
}

<style>

    body {
        background-color: #f0f8ff;
    }

    .consulta-container {
        background: linear-gradient(135deg, #0F2027, #203A43);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        max-width: 650px;
        padding: 35px;
        color: white;
        border: 1px solid rgba(100, 210, 255, 0.3);
    }

    .consulta-title {
        text-align: center;
        font-weight: bold;
        color: #64D2FF;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 28px;
        margin-bottom: 30px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 2px solid #3A7CA5;
        color: white;
        border-radius: 8px;
        transition: all 0.3s;
        padding: 15px;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #64D2FF;
            background-color: rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 0 3px rgba(100, 210, 255, 0.2);
        }

    .btn-consulta {
        background-color: #3A7CA5; /* Azul medio */
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        width: 100%;
        transition: all 0.3s;
        text-transform: uppercase;
        padding: 16px;
        font-size: 16px;
        margin-top: 20px;
    }

        .btn-consulta:hover {
            background-color: #64D2FF; /* Azul brillante */
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(100, 210, 255, 0.3);
        }

    .alert-warning {
        background-color: rgba(255, 193, 7, 0.15);
        border-color: rgba(255, 193, 7, 0.3);
        color: #FFC107;
        border-radius: 8px;
    }

    label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: rgba(255, 255, 255, 0.9);
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

</style>
<div class="position-absolute top-50 start-50 translate-middle w-100" style="max-width: 650px;">
    <div class="consulta-container">
        <h2 class="consulta-title">
            <i class="fas fa-search"></i> Consulta de Pagos
        </h2>

        <form asp-action="BuscarPorDni" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="dni">Ingrese su DNI:</label>
                <input type="text" name="dni" class="form-control" required maxlength="15"
                       placeholder="Ejemplo: 12345678" />
            </div>

            <button type="submit" class="btn btn-consulta">
                <i class="fas fa-paper-plane"></i> Consultar
            </button>
        </form>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-warning mt-4">
                <i class="fas fa-exclamation-triangle"></i> @ViewBag.Mensaje
            </div>
        }
    </div>
</div>

<!-- Agrega FontAwesome para los íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
