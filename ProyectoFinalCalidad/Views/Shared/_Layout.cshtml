@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using ProyectoFinalCalidad.Data
@using ProyectoFinalCalidad.Models
@using System.Security.Claims
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject ApplicationDbContext DbContext

@{
    string userName = "Invitado";
    string cargoEmpleado = "";
    bool isAdmin = false;
    bool isEmpleado = false;
    bool isUsuario = false;

    if (User.Identity.IsAuthenticated)
    {
        userName = User.Identity.Name;

        // Role principal desde claims
        var roleClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        isAdmin = roleClaim == "Administrador";
        isEmpleado = roleClaim == "Empleado";
        isUsuario = roleClaim == "Usuario";

        // Cargo del empleado desde claims
        cargoEmpleado = User.Claims.FirstOrDefault(c => c.Type == "Cargo")?.Value ?? "";

        // Obtener usuario y roles desde BD
        var identityUser = await UserManager.FindByNameAsync(User.Identity.Name);
        if (identityUser != null)
        {
            var rolesDb = await UserManager.GetRolesAsync(identityUser);
            isAdmin = rolesDb.Contains("Administrador");
            isEmpleado = rolesDb.Contains("Empleado");
            isUsuario = rolesDb.Contains("Usuario");

            // Cargo del empleado
            if (isEmpleado && string.IsNullOrEmpty(cargoEmpleado))
            {
                var empleado = await DbContext.Empleados
                    .Include(e => e.Cargo)
                    .FirstOrDefaultAsync(e => e.correo.ToLower() == identityUser.Email.ToLower() || e.dni == identityUser.UserName);

                if (empleado != null)
                {
                    cargoEmpleado = empleado.Cargo?.titulo_cargo ?? "";
                }
            }
        }
    }
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Lunnys Perú</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        /* =================== BASE =================== */
        *, *::before, *::after {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: #F2FFFE;
            color: #212529;
            font-family: 'Segoe UI', Roboto, sans-serif;
            margin: 0;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
        }

        /* =================== NAVBAR =================== */
        .navbar {
            background: linear-gradient(90deg, #f0f4f8 0%, #fdfdfd 100%);
            border-bottom: 1px solid #dee2e6;
            padding: 0.7rem 2rem;
        }

        .navbar-brand img {
            height: 45px;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.08);
            }

        .navbar-nav .nav-link {
            color: #444;
            font-weight: 500;
            margin-right: 0.75rem;
            transition: all 0.2s ease-in-out;
            padding: .35rem .5rem;
        }

            .navbar-nav .nav-link:hover {
                color: #0d6efd;
                transform: translateY(-1px);
            }

        .navbar-nav .active {
            color: #0d6efd !important;
        }

        /* BOTONES LOGIN */
        .btn-login, .btn-register-lunnys, .btn-logout {
            min-height: 38px;
            padding: 6px 16px;
            border-radius: 30px;
            transition: all 0.2s ease-in-out;
        }

        .btn-login {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: .5rem;
            background-color: transparent;
            border: 1px solid #0d6efd;
            color: #0d6efd;
            font-weight: 500;
            text-decoration: none;
        }

            .btn-login:hover {
                background-color: #0d6efd;
                color: #fff;
                transform: translateY(-2px);
            }

        .btn-register-lunnys {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: .5rem;
            background-color: #1e88e5;
            border: none;
            color: #fff !important;
            font-weight: 500;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-register-lunnys:hover {
                background-color: #1565c0;
                color: #fff !important;
                transform: translateY(-2px);
            }

        .btn-logout {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 6px 16px;
            border: 1px solid #dc3545;
            background-color: transparent;
            color: #dc3545;
            font-weight: 500;
            text-decoration: none;
        }

            .btn-logout:hover {
                background-color: #dc3545;
                color: #fff;
            }

        /* FOOTER */
        footer {
            background: #f8f9fa;
            border-top: 1px solid #dee2e6;
            padding: 30px 0 15px 0;
            text-align: center;
            font-size: 0.95rem;
            color: #6c757d;
        }

            footer a {
                color: #0d6efd;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .footer-social i {
            font-size: 1.25rem;
            margin: 0 10px;
            color: #0d6efd;
            transition: transform 0.3s ease, color 0.3s ease;
        }

            .footer-social i:hover {
                transform: translateY(-3px);
                color: #1565c0;
            }

        /* Responsive */
        @@media (max-width: 576px) {
            .navbar {
                padding: .5rem 1rem;
            }

            .btn-login, .btn-register-lunnys, .btn-logout {
                padding: 6px 12px;
                min-height: 36px;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo-lunnys2.png" alt="Logo Lunnys Perú" />
                    <span class="ms-2 fw-semibold text-primary">Lunnys Perú</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-1"></i>Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check me-1"></i>Privacidad</a></li>

                        @* Navegación para Administrador *@
                        @if (isAdmin)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Empleado" asp-action="MostrarEmpleados"><i class="bi bi-people me-1"></i>Empleados</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="MostrarClientes"><i class="bi bi-person-badge me-1"></i>Clientes</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Equipo" asp-action="Administrar"><i class="bi bi-pc-display me-1"></i>Equipos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="ZonaCobertura" asp-action="Index"><i class="bi bi-map me-1"></i>Zonas</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Pagos" asp-action="BuscarPorDni"><i class="bi bi-credit-card me-1"></i>Pagos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Contrato" asp-action="MostrarContratos"><i class="bi bi-file-earmark-text me-1"></i>Contratos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="PedidoInstalacion" asp-action="Index"><i class="bi bi-tools me-1"></i>Instalaciones</a></li>
                        }

                        @* Navegación para Empleado según su cargo *@
                        @if (isEmpleado && !isAdmin)
                        {
                            switch (cargoEmpleado)
                            {
                                case "Asesor Comercial":
                                    <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="MostrarClientes"><i class="bi bi-person-badge me-1"></i>Clientes</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Contrato" asp-action="MostrarContratos"><i class="bi bi-file-earmark-text me-1"></i>Contratos</a></li>
                                    break;
                                case "Jefe Almacén":
                                    <li class="nav-item"><a class="nav-link" asp-controller="Equipo" asp-action="Administrar"><i class="bi bi-pc-display me-1"></i>Equipos</a></li>
                                    break;
                                case "Jefe de Servicio":
                                    <li class="nav-item"><a class="nav-link" asp-controller="Cliente" asp-action="MostrarClientes"><i class="bi bi-person-badge me-1"></i>Clientes</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Contrato" asp-action="MostrarContratos"><i class="bi bi-file-earmark-text me-1"></i>Contratos</a></li>
                                    break;
                                case "Jefe de Soporte Técnico":
                                    <li class="nav-item"><a class="nav-link" asp-controller="Empleado" asp-action="MostrarEmpleados"><i class="bi bi-people me-1"></i>Empleados</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="ZonaCobertura" asp-action="Index"><i class="bi bi-map me-1"></i>Zonas</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="PedidoInstalacion" asp-action="Index"><i class="bi bi-tools me-1"></i>Instalaciones</a></li>
                                    break;
                            }
                        }

                        @* Navegación para Usuario *@
                        @if (isUsuario && !isAdmin && !isEmpleado)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Pagos" asp-action="BuscarPorDni"><i class="bi bi-credit-card me-1"></i>Pagos</a></li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3 text-secondary">
                                <i class="bi bi-person-circle me-1"></i>Hola, <strong>@userName</strong>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-logout">
                                        <i class="bi bi-box-arrow-right me-1"></i>Salir
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-login" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-register-lunnys" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-social mb-2">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-whatsapp"></i></a>
            <a href="#"><i class="bi bi-envelope"></i></a>
        </div>
        <p class="mb-0">&copy; 2025 <strong>Lunnys Perú</strong> — Todos los derechos reservados.</p>
        <small>Conectando hogares y empresas con soluciones inteligentes.</small>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>