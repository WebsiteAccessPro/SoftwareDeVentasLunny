    <!-- Theme Toggle Script -->
    <script>
        // Función para cambiar el tema
        function toggleTheme() {
            const html = document.documentElement;
            const themeIcon = document.getElementById('theme-icon');
            const currentTheme = html.getAttribute('data-theme');

            if (currentTheme === 'dark') {
                html.removeAttribute('data-theme');
                localStorage.setItem('theme', 'light');
                themeIcon.className = 'bi bi-sun-fill';
            } else {
                html.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
                themeIcon.className = 'bi bi-moon-fill';
            }

            // Forzar actualización de elementos inline
            updateInlineStyles();
        }

        // Función para actualizar estilos inline en elementos específicos
        function updateInlineStyles() {
            const isDark = document.documentElement.getAttribute('data-theme') === 'dark';

            // Actualizar selectores que tienen estilos inline
            const inlineElements = document.querySelectorAll('[style*="background"]');
            inlineElements.forEach(element => {
                if (isDark) {
                    // Guardar estilos originales si no se han guardado
                    if (!element.hasAttribute('data-original-style')) {
                        element.setAttribute('data-original-style', element.getAttribute('style'));
                    }

                    // Aplicar adaptaciones para modo oscuro
                    let style = element.getAttribute('style');
                    if (style.includes('background: #fff') || style.includes('background-color: #fff')) {
                        style = style.replace(/background(|-color): #fff/g, 'background: #1e1e1e');
                    }
                    if (style.includes('color: #1e2a35') || style.includes('color: #000')) {
                        style = style.replace(/color: #1e2a35|color: #000/g, 'color: #e0e0e0');
                    }
                    element.setAttribute('style', style);
                } else {
                    // Restaurar estilos originales
                    const originalStyle = element.getAttribute('data-original-style');
                    if (originalStyle) {
                        element.setAttribute('style', originalStyle);
                    }
                }
            });
        }

        // Cargar tema guardado al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('theme-icon');

            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
                themeIcon.className = 'bi bi-moon-fill';
            }

            // Actualizar estilos inline después de un pequeño retraso
            setTimeout(updateInlineStyles, 100);

            // Observar cambios en el DOM para nuevos elementos
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'childList' && mutation.addedNodes.length > 0) {
                        setTimeout(updateInlineStyles, 50);
                    }
                });
            });

            // Observar cambios en el body
            observer.observe(document.body, {
                childList: true,
                subtree: true
            });

            // Añadir event listener al botón
            document.getElementById('theme-toggle').addEventListener('click', toggleTheme);
        });

        // Función auxiliar para forzar recálculo de estilos
        function forceStyleRecalculation() {
            document.body.style.display = 'none';
            document.body.offsetHeight; // Trigger reflow
            document.body.style.display = '';
        }

        // Escuchar cambios en localStorage desde otras pestañas
        window.addEventListener('storage', function(e) {
            if (e.key === 'theme') {
                const newTheme = e.newValue || 'light';
                const html = document.documentElement;
                const themeIcon = document.getElementById('theme-icon');

                if (newTheme === 'dark') {
                    html.setAttribute('data-theme', 'dark');
                    themeIcon.className = 'bi bi-moon-fill';
                } else {
                    html.removeAttribute('data-theme');
                    themeIcon.className = 'bi bi-sun-fill';
                }

                updateInlineStyles();
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
