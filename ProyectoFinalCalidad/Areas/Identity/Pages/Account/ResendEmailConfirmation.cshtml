@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmación de correo";
}

<style>

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
    }

    /* ======== CONTENEDOR PRINCIPAL ======== */
    .resend-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        max-width: 950px;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        overflow: hidden;
        margin: 3rem auto;
        animation: fadeInUp 0.7s ease;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(25px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ======== PANEL IZQUIERDO (FORMULARIO) ======== */
    .resend-left {
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .resend-left h1 {
            color: #0077cc;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.25rem;
        }

        .resend-left h2 {
            color: #6c757d;
            font-weight: 500;
            font-style: italic;
            font-size: 1.05rem;
            margin-bottom: 1.5rem;
        }

        .resend-left hr {
            border: none;
            height: 3px;
            width: 70px;
            background: #009ffd;
            border-radius: 5px;
            margin-bottom: 2rem;
        }

    /* ======== INPUT GROUP ======== */
    .input-group {
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .input-label {
        font-weight: 600;
        color: #495057;
        font-size: 0.95rem;
        margin-bottom: 0.4rem;
    }

    .input-wrapper {
        position: relative;
        width: 100%;
    }

        .input-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #0077cc;
            font-size: 1.15rem;
            opacity: 0.9;
            pointer-events: none;
        }

        .input-wrapper input {
            width: 100%;
            box-sizing: border-box;
            padding: 0.75rem 1rem 0.75rem 3.1rem;
            border-radius: 0.6rem;
            border: 1px solid #dee2e6;
            transition: all 0.25s ease;
            font-size: 1rem;
            height: 3rem;
            background: #fbfdff;
        }

            .input-wrapper input:focus {
                border-color: #009ffd;
                box-shadow: 0 0 8px rgba(0, 159, 253, 0.3);
                outline: none;
            }

    /* ======== BOTÓN ======== */
    button[type="submit"] {
        background: linear-gradient(90deg, #009ffd, #4facfe);
        border: none;
        border-radius: 0.7rem;
        width: 100%;
        padding: 0.9rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        transition: all 0.25s ease;
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.35);
        cursor: pointer;
    }

        button[type="submit"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 172, 254, 0.45);
        }

    /* ======== MENSAJES ======== */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
        color: #d9534f;
    }

    .footer-note {
        margin-top: 1.8rem;
        font-size: 0.9rem;
        color: #6c757d;
        text-align: center;
    }

        .footer-note a {
            color: #0077cc;
            text-decoration: none;
            font-weight: 500;
        }

            .footer-note a:hover {
                color: #005fa3;
                text-decoration: underline;
            }

    /* ======== PANEL DERECHO (DECORATIVO) ======== */
    .resend-right {
        background: linear-gradient(135deg, #009ffd, #2a2a72);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 3rem 2rem;
    }

        .resend-right h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .resend-right p {
            font-size: 1.05rem;
            max-width: 320px;
            opacity: 0.9;
            line-height: 1.5;
        }

    /* ======== RESPONSIVE ======== */
    @@media (max-width: 900px) {
        .resend-card

    {
        grid-template-columns: 1fr;
    }

    .resend-right {
        display: none;
    }

    .resend-left {
        padding: 2rem 1.5rem;
    }

    }
</style>

<div class="resend-card">
    <!-- PANEL IZQUIERDO -->
    <div class="resend-left">
        <h1>@ViewData["Title"]</h1>
        <h2>Introduce tu correo electrónico</h2>
        <hr />

        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-group">
                <label asp-for="Input.Email" class="input-label">Correo electrónico</label>
                <div class="input-wrapper">
                    <i class="bi bi-envelope-check"></i>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="usuario@dominio.com" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit">
                <i class="bi bi-arrow-repeat me-2"></i> Reenviar confirmación
            </button>

            <div class="footer-note">
                <p>¿Ya confirmaste tu cuenta? <a asp-page="/Account/Login">Inicia sesión</a></p>
            </div>
        </form>
    </div>

    <!-- PANEL DERECHO -->
    <div class="resend-right">
        <h3>Verifica tu correo</h3>
        <p>Te enviaremos un enlace para confirmar tu cuenta y activar el acceso a todas las funciones.</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
