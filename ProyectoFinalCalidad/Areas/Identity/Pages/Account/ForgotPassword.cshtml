@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<style>

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
    }

    /* ======== CONTENEDOR PRINCIPAL ======== */
    .forgot-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        max-width: 950px;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        overflow: hidden;
        margin: 3rem auto;
        animation: fadeInUp 0.7s ease;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(25px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ======== PANEL IZQUIERDO (FORMULARIO) ======== */
    .forgot-left {
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .forgot-left h1 {
            color: #0077cc;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.25rem;
        }

        .forgot-left h2 {
            color: #6c757d;
            font-weight: 500;
            font-style: italic;
            font-size: 1.05rem;
            margin-bottom: 1.5rem;
        }

        .forgot-left hr {
            border: none;
            height: 3px;
            width: 70px;
            background: #009ffd;
            border-radius: 5px;
            margin-bottom: 2rem;
        }

    /* ======== INPUT GROUP ======== */
    .input-group {
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .input-label {
        font-weight: 600;
        color: #495057;
        font-size: 0.95rem;
        margin-bottom: 0.4rem;
    }

    .input-wrapper {
        position: relative;
        width: 100%;
    }

        .input-wrapper i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #0077cc;
            font-size: 1.15rem;
            opacity: 0.9;
            pointer-events: none;
        }

        .input-wrapper input {
            width: 100%;
            box-sizing: border-box;
            padding: 0.75rem 1rem 0.75rem 3.1rem;
            border-radius: 0.6rem;
            border: 1px solid #dee2e6;
            transition: all 0.25s ease;
            font-size: 1rem;
            height: 3rem;
            background: #fbfdff;
        }

            .input-wrapper input:focus {
                border-color: #009ffd;
                box-shadow: 0 0 8px rgba(0, 159, 253, 0.3);
                outline: none;
            }

    /* ======== BOTÓN ======== */
    button[type="submit"] {
        background: linear-gradient(90deg, #009ffd, #4facfe);
        border: none;
        border-radius: 0.7rem;
        width: 100%;
        padding: 0.9rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        transition: all 0.25s ease;
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.35);
        cursor: pointer;
    }

        button[type="submit"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 172, 254, 0.45);
        }

    /* ======== MENSAJES ======== */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
        color: #d9534f;
    }

    .footer-note {
        margin-top: 1.8rem;
        font-size: 0.9rem;
        color: #6c757d;
        text-align: center;
    }

        .footer-note a {
            color: #0077cc;
            text-decoration: none;
            font-weight: 500;
        }

            .footer-note a:hover {
                color: #005fa3;
                text-decoration: underline;
            }

    /* ======== PANEL DERECHO (DECORATIVO) ======== */
    .forgot-right {
        background: linear-gradient(135deg, #009ffd, #2a2a72);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 3rem 2rem;
    }

        .forgot-right h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .forgot-right p {
            font-size: 1.05rem;
            max-width: 320px;
            opacity: 0.9;
            line-height: 1.5;
        }

    /* ======== RESPONSIVE ======== */
    @@media (max-width: 900px) {
        .forgot-card

    {
        grid-template-columns: 1fr;
    }

    .forgot-right {
        display: none;
    }

    .forgot-left {
        padding: 2rem 1.5rem;
    }

    }
</style>

<style>
    /* ======= MODO OSCURO (solo superficies blancas) ======= */
    html[data-theme="dark"] .forgot-card,
    [data-bs-theme="dark"] .forgot-card,
    .dark-mode .forgot-card {
        background: #1e1e1e;
        color: #e0e0e0;
        box-shadow: 0 8px 24px rgba(0,0,0,0.35);
    }

    html[data-theme="dark"] .forgot-left,
    [data-bs-theme="dark"] .forgot-left,
    .dark-mode .forgot-left {
        color: #e0e0e0;
    }

    /* Inputs y etiquetas */
    html[data-theme="dark"] .forgot-left .form-control,
    [data-bs-theme="dark"] .forgot-left .form-control,
    .dark-mode .forgot-left .form-control,
    html[data-theme="dark"] .input-wrapper input,
    [data-bs-theme="dark"] .input-wrapper input,
    .dark-mode .input-wrapper input {
        background-color: #232323;
        color: #e0e0e0;
        border-color: #3a3a3a;
    }

    html[data-theme="dark"] .forgot-left .form-control::placeholder,
    [data-bs-theme="dark"] .forgot-left .form-control::placeholder,
    .dark-mode .forgot-left .form-control::placeholder {
        color: #9aa0a6;
    }

    html[data-theme="dark"] .input-label,
    [data-bs-theme="dark"] .input-label,
    .dark-mode .input-label {
        color: #cfd2d6;
    }

    html[data-theme="dark"] .forgot-left .input-wrapper input:focus,
    [data-bs-theme="dark"] .forgot-left .input-wrapper input:focus,
    .dark-mode .forgot-left .input-wrapper input:focus {
        border-color: #5ab9ea;
        box-shadow: 0 0 8px rgba(90, 185, 234, 0.35);
        outline: none;
    }

    /* Nota de pie */
    html[data-theme="dark"] .footer-note,
    [data-bs-theme="dark"] .footer-note,
    .dark-mode .footer-note {
        color: #b0b0b0;
    }

    html[data-theme="dark"] .footer-note a,
    [data-bs-theme="dark"] .footer-note a,
    .dark-mode .footer-note a {
        color: #4fc3f7;
    }
</style>

<div class="forgot-card">
    <!-- PANEL IZQUIERDO -->
    <div class="forgot-left">
        <h1>@ViewData["Title"]</h1>
        <h2>Introduce tu correo electrónico</h2>
        <hr />

        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-group">
                <label asp-for="Input.Email" class="input-label">Correo electrónico</label>
                <div class="input-wrapper">
                    <i class="bi bi-envelope"></i>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="usuario@dominio.com" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit">
                <i class="bi bi-arrow-repeat me-2"></i> Restablecer contraseña
            </button>

            <div class="footer-note">
                <p>¿Recordaste tu contraseña? <a asp-page="/Account/Login">Inicia sesión</a></p>
            </div>
        </form>
    </div>

    <!-- PANEL DERECHO -->
    <div class="forgot-right">
        <h3>¿Problemas para acceder?</h3>
        <p>No te preocupes, te ayudaremos a recuperar tu acceso en pocos pasos.</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
